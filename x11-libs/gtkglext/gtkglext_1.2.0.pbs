#
# Ylmf OS package build script
#

DESCRIPTION="GL extensions for Gtk+ 2.0"
HOMEPAGE="http://gtkglext.sourceforge.net/"
REPO=""
LICENSE=""
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://downloads.sourceforge.net/project/"$N"/"$N"/"$V"/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND="mesa"

pbs_unpack() {
        dounpack
}

pbs_config() {
	dopatch 01_fix_fontcache_nullderef.dpatch gtk2.20.patch 
	config+="--with-x"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}
