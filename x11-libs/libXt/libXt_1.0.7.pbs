#
# YLmf_OS package build script
#
HOMEPAGE="http://www.x.org/wiki/"
 
SRCURL="http://www.x.org/releases/X11R7.5/src/lib"
SRC_URI="$SRCURL/libXt-1.0.7.tar.bz2"

RDEPEND="libSM libICE libX11 util-linux-ng libxcb libXau libXdmcp"
BDEPEND="${RDEPEND} x11-libs/libSM"

pbs_unpack()
{
        ypkg_unpack
}

pbs_config()
{
	
	YPB_CONFIG+=" --sysconfdir=/etc --mandir=/usr/share/man --localstatedir=/var "
	ypkg_config
}

pbs_build()
{
	ypkg_make
}

pbs_install()
{
	ypkg_mkinstall
}
