#
# YLmf_OS package build script
#
DaESCRIPTION="DOS filesystem tools - provides mkdosfs, mkfs.msdos, mkfs.vfa"
HOMEPAGE="http://www.daniel-baumann.ch/software/dosfstools/"
LICENSE=""
PACKAGER="<ylmfos@115.com>"

SRC_URI="http://www.daniel-baumann.ch/software/"$N"/"$N-$V$R".tar.bz2"

RDEPEND="glibc"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        ypkg_unpack
}

pbs_build() {
	sed -i -e '/^PREFIX/s:/local::' -e '/^OPTFLAGS/s:=.*:=:' Makefile
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
