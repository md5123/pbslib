. /usr/lib/ybs/funcs

post_install() {
	update-initramfs -k "$(uname -r)" -c
	update-grub ||true
}       

post_remove() {
	cd /usr/sbin/
	[ -f grub-install.real ] && ln -svf grub-install.real grub-install
	update-initramfs -k "$(uname -r)" -c 
	update-grub ||true
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

