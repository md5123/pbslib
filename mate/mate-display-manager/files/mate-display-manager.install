. /usr/lib/ybs/funcs

gname="mdm"

post_install() {
    dogroupadd -g 121 $gname
    douseradd -c 'MATE Display Manager' -u 121 -g $gname -d /var/lib/mdm -s /sbin/nologin $gname
    passwd -l $gname > /dev/null
    chown -R $gname:$gname /var/lib/mdm > /dev/null

    gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
}

post_upgrade() {
    post_install
}

post_remove() {
    douserdel $gname
    dogroupdel $gname
    
    gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
}

