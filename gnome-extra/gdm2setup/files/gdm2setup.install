. /usr/lib/ybs/funcs

post_install() {
	gnome2_desktop_database_update
}

post_remove() {
	post_install

	gdmconf="/etc/gdm/custom.conf"
	if [ -f $gdmconf ]; then
		if ! grep -q User $gdmconf; then
			cp /etc/gdm/custom.conf.ori $gdmconf
		fi
	else
		cp /etc/gdm/custom.conf.ori $gdmconf
	fi
	return 0 
}

post_upgrade() {
	post_install
}

post_downgrade() {	
	post_install
}
