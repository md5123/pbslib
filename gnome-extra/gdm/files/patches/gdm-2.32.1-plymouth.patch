+
 #ifdef HAVE_SYS_PRCTL_H
 #include <sys/prctl.h>
 #endif
@@ -44,6 +47,8 @@
 #include <glib-object.h>
 
 #include <X11/Xlib.h> /* for Display */
+#include <sys/stat.h>
