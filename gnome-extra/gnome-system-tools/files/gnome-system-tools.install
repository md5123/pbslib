. /usr/lib/ybs/funcs

files="/etc/gconf/schemas/gnome-system-tools.schemas"

post_install() {
	dogroupadd -r "dialout"
	gnome2_install_schema $files
	gnome2_desktop_database_update
	gnome2_icon_cache_update 

}

pre_remove() {
	gnome2_uninstall_schema $files ||true
}

post_remove() {
	dogroupdel "dialout" ||true
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

