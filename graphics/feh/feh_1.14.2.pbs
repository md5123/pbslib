DESCRIPTION="feh is an X11 image viewer aimed mostly at console users. "
HOMEPAGE="http://feh.finalrewind.org/"
LICENSE="MIT"
PACKAGER="StartOS Developers"

SRC_URI="http://feh.finalrewind.org/"$N-$V".tar.bz2"

RDEPEND="curl giblib libpng libXinerama"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_patch() {
	dopatch makefile-prefixdir.patch
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

