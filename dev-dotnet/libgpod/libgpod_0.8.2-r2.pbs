DESCRIPTION="Shared library to access the contents of an iPod"
HOMEPAGE="http://www.gtkpod.org/libgpod/"
LICENSE="LGPL"
PACKAGER="StartOS Developers"

SRC_URI="http://downloads.sourceforge.net/sourceforge/gtkpod/"$N-$V".tar.bz2"

RDEPEND="gdk-pixbuf glib2 glibc gnutls libffi libgcrypt libgpg-error libimobiledevice libplist libpng libtasn1 libusbx libxml2 sg3_utils sqlite usbmuxd zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--enable-udev"
	doconfig
}

pbs_build() {
	make -j1
}

pbs_install() {
	domkinstall
	[ -d "$destdir"/tmp ] && rm -rf "$destdir"/tmp
}

