DESCRIPTION="a branch of the official gtk-sharp/gio to get gio-sharp building on gtk-sharp 2.12"
HOMEPAGE="http://banshee.fm/download/development/"
LICENSE="MIT"
PACKAGER="StartOS Developers"

SRC_URI="git://github.com/mono/gio-sharp.git"

RDEPEND="gtk-sharp"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	./autogen-2.22.sh
	config+=""
	doconfig
}

pbs_build() {
	make
}

pbs_install() {
	domkinstall
}

