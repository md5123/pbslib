#
# YLmf_OS package build script
#

DESCRIPTION="C# implementation of D-Bus"
HOMEPAGE="http://github.com/mono/dbus-sharp/"
LICENSE="custom"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
YARCH="any"

SRC_URI="https://github.com/downloads/mono/"$N"/"$N-$V".tar.gz"

RDEPEND="mono"
RECOMMENDED=""
BDEPEND=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export MONO_SHARED_DIR="${PWD}/.wabi"
	mkdir -p "${MONO_SHARED_DIR}"
	
	YPB_CONFIG+=""
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
	ypkg_dodoc COPYING
}	

