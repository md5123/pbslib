#
# YLmf_OS package build script
#

DESCRIPTION="Web browser implementation (Gecko) for Mono, the free .NET runtime"
HOMEPAGE="http://www.mono-project.com/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://download.mono-project.com/sources/"$N"/"$N-$V".tar.bz2"

RDEPEND="mono"
RECOMMENDED=""
BDEPEND=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	rm configure
	autoconf

	YPB_CONFIG="--prefix=/usr"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}


