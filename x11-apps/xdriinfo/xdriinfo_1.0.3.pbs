DESCRIPTION="query configuration information of DRI drivers"
HOMEPAGE="http://xorg.freedesktop.org/"
GROUP="x11-apps"
LICENSE=""
PACKAGER="StartOS Developers"

SRC_URI="http://www.x.org/releases/X11R7.5/src/app/$N-$V$R.tar.bz2"

RDEPEND="libX11 mesa libxcb libXext libXxf86vm libXdamage libXfixes libdrm libXau libXdmcp"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
    
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    install -m755 -d "$destdir"/usr/share/doc/"$N-$V$R"
    cp -a AUTHORS ChangeLog COPYING INSTALL NEWS README   "$destdir"/usr/share/doc/"$N-$V$R"
}
