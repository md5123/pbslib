#
# YLmf_OS package build script
#

DESCRIPTION="create an X cursor file from a collection of PNG images"
HOMEPAGE="http://xorg.freedesktop.org/"
 
SRC_URI="http://www.x.org/releases/X11R7.6/src/app/"$N-$V$R".tar.bz2"

RDEPEND="libX11 libXcursor libpng libxcb libXrender libXfixes libXau libXdmcp zlib"
BDEPEND="${RDEPEND} x11-libs/libXcursor media-libs/libpng x11-libs/libXcursor"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
