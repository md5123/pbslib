#
# YLmf_OS package build script
#

DESCRIPTION="Lightweight GTK+ based systray for UNIX desktop"
HOMEPAGE="http://gna.org/projects/fvwm-crystal/"
REPO="testing"

SRC_URI="http://download.gna.org/fvwm-crystal/"$N"/"$V$R"/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	sed -i "s/-DGTK_DISABLE_DEPRECATED//g" Makefile.common
	doconfig
}

pbs_build() {
	domake PREFIX=/usr
}

pbs_install() {
	mkdir -p "$destdir"/usr
	make PREFIX="$destdir"/usr install
}
