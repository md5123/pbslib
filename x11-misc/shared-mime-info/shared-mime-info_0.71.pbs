#
# YLmf_OS package build script
#

DESCRIPTION="The Shared MIME-info Database specification"
HOMEPAGE="http://freedesktop.org/wiki/Software/shared-mime-info"
 
SRC_URI=" http://people.freedesktop.org/~hadess/"$N-$V$R".tar.bz2 "

RDEPEND="libxml2 zlib"
BDEPEND="${RDEPEND} glib2 libxml2 dev-perl/xml-parser"
OPIONAL="intltool"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--disable-gtk-doc"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
