. /usr/lib/ybs/funcs

files="/etc/gconf/schemas/notification-daemon.schemas"

post_install() {
	gnome2_install_schema "$files"
	gnome2_install_defaut_gconf "string" "/apps/notification-daemon/popup_location" "bottom_right"
	gnome2_install_defaut_gconf "string" "/apps/notification-daemon/theme" "standard"
	gnome2_icon_cache_update
	gnome2_gconfd_reload
}

pre_remove() {
	gnome2_uninstall_schema "$files"
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

