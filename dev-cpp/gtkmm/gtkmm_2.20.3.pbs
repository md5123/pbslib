#
# YLmf_OS package build script
#

DESCRIPTION="C++ interface for GTK+2"
HOMEPAGE="http://www.gtkmm.org"
LICENSE="LGPL"
PACKAGER="hzx@115.com"
 
SRC_URI=" http://ftp.gnome.org/pub/gnome/sources/"$N"/2.20/"$N-$V$R".tar.bz2 "

RDEPEND="glibmm pangomm cairomm libsigc++ gtk+ pango cairo pixman libxml2 directfb libpng 
	 libxcb libXrender libX11 libXau libXdmcp fontconfig freetype zlib expat libXi libXrandr libXcursor
	 libXcomposite libXext libXdamage libXfixes"
BDEPEND="${RDEPEND} glibmm gtk+ cairomm pangomm atk" 
RECOMMENDED=""

NOTES="http://wiki.linuxfromscratch.org/blfs/wiki/gtkmm"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--disable-documentation"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
	ypkg_dodoc NEWS README ChangeLog COPYING INSTALL
}
