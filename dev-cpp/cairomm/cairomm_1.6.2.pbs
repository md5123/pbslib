#
# YLmf_OS package build script
#

DESCRIPTION="C++ bindings for the Cairo vector graphics library"
HOMEPAGE="http://cairographics.org/cairomm"
LICENSE="GPL-2"
PACKAGER="<ylmfos@115.com>"
 
SRC_URI="http://cairographics.org/releases/$N-$V.tar.gz"

RDEPEND=""
BDEPEND=" cairo"
RECOMMENDED=""

NOTES="http://wiki.linuxfromscratch.org/blfs/wiki/cairomm"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	
	YPB_CONFIG+=" --prefix=/usr "
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
