#
# YLmf_OS package build script
#

DESCRIPTION="C++ bindings for the Cairo vector graphics library"
HOMEPAGE="http://cairographics.org/cairomm"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"

SRC_URI="http://cairographics.org/releases/"$N-$V$R".tar.gz"

RDEPEND="cairo expat fontconfig freetype gcc glibc libpng libsigc++ libX11 libXau libxcb libXdmcp libXrender pixman zlib"
BDEPEND="cairo-dev expat-dev fontconfig-dev freetype-dev gcc-dev glibc-dev libpng-dev libsigc++-dev libX11-dev libXau-dev libxcb-dev libXdmcp-dev libXrender-dev pixman-dev zlib-dev"
RECOMMENDED=""

NOTES="http://wiki.linuxfromscratch.org/blfs/wiki/cairomm"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
