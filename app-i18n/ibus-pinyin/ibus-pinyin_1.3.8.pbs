#
# YLmf_OS package build script
#

DESCRIPTION="Chinese PinYin IMEngine for IBus Framework"
HOMEPAGE="http://code.google.com/p/ibus/"
LICENSE="GPL-2"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
 
SRC_URI="ftp://lug.mtu.edu/gentoo/distfiles/$N-$V.tar.gz 
	 ftp://lug.mtu.edu/gentoo/distfiles/pinyin-database-1.2.99.tar.bz2 "

RDEPEND="app-i18n/ibus dev-libs/boost " #sys-apps/util-linux"
BDEPEND=" "
RECOMMENDED=""

NOTES=""

pbs_unpack() {
        dounpack
        dounpack
}

pbs_config() {
	
	config+=" --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
	              --infodir=/usr/share/info --mandir=/usr/share/man  \
		      --enable-nls --enable-db-open-phrase --disable-db-android"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	install -m755 -d "$destdir"/usr/share/{doc,man}/"$N-$V$R"
	cp -a AUTHORS ChangeLog NEWS README  "$destdir"/usr/share/doc/"$N-$V$R"
}
