DESCRIPTION="library for multiple-precision floating-point computations with exact rounding"
HOMEPAGE="http://www.mpfr.org"
LICENSE="LGPL" 
PACKAGER="StartOS Developers"

SRC_URI="http://www.mpfr.org/mpfr-current/"$N-$V".tar.xz"

RDEPEND="gmp"
BDEPEND=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--enable-thread-safe"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

