PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://download.librdf.org/source/"$N-$V".tar.gz"

RDEPEND="berkeley-db curl cyrus-sasl glibc gmp gnutls libgcrypt libgpg-error libidn libiodbc libssh2 libtasn1 libxml2 libxslt mpfr openssl raptor2 rasqal rtmpdump zlib openldap"
