#
# Ylmf OS package build script
#

DESCRIPTION="Userspace access to USB devices"
HOMEPAGE="http://libusb.org/"
 
SRC_URI="http://downloads.sourceforge.net/libusb/libusb-$V.tar.bz2"

RDEPEND=""
BDEPEND=""

pbs_unpack()
{
        dounpack
}

pbs_config()
{
	
	config+=" --prefix=/usr "
	doconfig
}

pbs_build()
{
	domake
}

pbs_install()
{
	domkinstall
}
