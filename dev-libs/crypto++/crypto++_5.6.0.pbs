#
# YLmf_OS package build script
#

DESCRIPTION="Crypto++ is a C++ class library of cryptographic schemes"
HOMEPAGE="http://cryptopp.com"
LICENSE=""
PACKAGER="<ylmfos@115.com>"

SRC_URI="http://cryptopp.com/cryptopp560.zip"

RDEPEND="gcc glibc"
BDEPEND="gcc-dev glibc-dev unzip"

pbs_unpack() {
	ypkg_unpack
}

pbs_build() {
	ypkg_patch "$N-$V$R"-fix_build_system.patch
	ypkg_make 
}

pbs_install() {
	make DESTDIR="$YPPATH_DEST"  install
}
