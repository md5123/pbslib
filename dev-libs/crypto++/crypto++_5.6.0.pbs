DESCRIPTION="Crypto++ is a C++ class library of cryptographic schemes"
HOMEPAGE="http://cryptopp.com"
LICENSE="custom"
PACKAGER="StartOS Developers"

SRC_URI="http://cryptopp.com/cryptopp560.zip"

RDEPEND="gcc-libs"
BDEPEND="unzip"

pbs_unpack() {
	dounpack
}

pbs_build() {
	dopatch "$N-$V"-fix_build_system.patch
	domake 
}

pbs_install() {
	domkinstall
	docp $filesdir/libcrypto++.pc "$destdir"/usr/lib/pkgconfig/
}

