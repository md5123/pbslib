DESCRIPTION="Parse Options - Command line parser"
HOMEPAGE="http://rpm5.org/"
LICENSE="GPL-2"
PACKAGER="StartOS Developers"

SRC_URI="ftp://anduin.linuxfromscratch.org/BLFS/6.3/p/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND=""

NOTES="sed ...: This fix taken backported from the development version of popt fixes a problem identified by the included testsuite."

pbs_unpack() {
        dounpack
}

pbs_config() {
	
	sed -i -e "/*origOptString ==/c 0)" popt.c
	config+="--prefix=/usr --infodir=/usr/share/info --mandir=/usr/share/man "
	doconfig
}

pbs_build(){
	domake
}

pbs_check() {
	make check
}

pbs_install() {
	domkinstall
}
