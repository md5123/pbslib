DESCRIPTION="frontend for libraries libburn and libisofs"
HOMEPAGE="http://libburnia-project.org/"
LICENSE="GPLv2"
PACKAGER="StartOS Developers"

SRC_URI="http://files.libburnia-project.org/releases/"$N-$V".tar.gz"

RDEPEND="libburn(>=1.2.4) libisofs(>=1.2.4) readline"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

