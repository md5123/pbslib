#
# YLmf_OS package build script
#

DESCRIPTION="Thin library on top of the Linux framebuffer devices"
HOMEPAGE="http://www.directfb.org/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
 
SRC_URI="http://www.directfb.org/downloads/Core/DirectFB-1.4/DirectFB-"$V".tar.gz"

RDEPEND="freetype gcc glibc libdrm libjpeg-turbo libpng libX11 libXau libxcb libXdamage libXdmcp libXext libXfixes libXxf86vm mesa sysfsutils zlib"
BDEPEND="libsdl-dev"
RECOMMENDED="libsdl"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--disable-mmx --disable-sse"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

