#
# YLmf_OS package build script
#

DESCRIPTION="Toolkit for SSL v2/v3 and TLS v1"
HOMEPAGE="http://www.openssl.org/"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"

SRC_URI="http://www.openssl.org/source/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG=" --prefix=/usr --openssldir=/etc/ssl shared zlib-dynamic "
	./config $YPB_CONFIG
}

pbs_build() {
	make -j1
}

pbs_install() {
	make INSTALL_PREFIX="$YPPATH_DEST" MANDIR=/usr/share/man install
	ypkg_docp certs "$YPPATH_DEST"/etc/ssl
	ypkg_dodoc doc/{HOWTO,README,*.{txt,html,gif}}
}

pbs_postinst() {
	ldconfig
}
