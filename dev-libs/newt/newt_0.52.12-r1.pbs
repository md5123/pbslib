DESCRIPTION="Redhat's Newt windowing toolkit development files"
HOMEPAGE="https://fedorahosted.org/newt/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="https://fedorahosted.org/releases/n/e/"$N"/"$N-$V".tar.gz"

RDEPEND="popt slang"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--without-tcl"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall instroot="$destdir"
}


