#
# YLmf_OS package build script
#

DESCRIPTION="a strictly RFC 3986 compliant URI parsing library written in C"
HOMEPAGE="http://uriparser.sourceforge.net/"
LICENSE="custom"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
 
SRC_URI="http://downloads.sourceforge.net/project/"$N"/Sources/"$V"/"$N-$V".tar.gz"

RDEPEND="glibc"
BDEPEND="cpptest"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_config
}

pbs_build() {
	ln -sf "$PWD"/doc/Doxyfile.in doc/Doxyfile
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

