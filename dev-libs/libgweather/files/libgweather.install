. /usr/lib/ybs/funcs

files="/etc/gconf/schemas/gweather.schemas"

post_install() {
	gnome2_install_schema $files
	gnome2_icon_cache_update "gnome"
	gnome2_gconfd_reload
}

pre_remove() {
	gnome2_uninstall_schema $files
}

post_upgrade() {
	gnome2_icon_cache_update "gnome"
	gnome2_gconfd_reload 
}

post_downgrade() {
	post_upgrade
}

