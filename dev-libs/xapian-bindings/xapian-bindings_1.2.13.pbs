DESCRIPTION="Python bindings for Xapian"
HOMEPAGE="http://xapian.org/docs/bindings/python"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://oligarchy.co.uk/xapian/$V/$N-$V.tar.gz"
CHECKSUM=""

RDEPEND="xapian-core python"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--with-python"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
