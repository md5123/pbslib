DESCRIPTION="A library for manipulating integer points bounded by affine constraints."
HOMEPAGE="http://www.kotnet.org/~skimo/isl/"
LICENSE="LGPL2.1"
PACKAGER="StartOS Developers"

SRC_URI="http://www.kotnet.org/~skimo/isl/"$N-$V".tar.bz2"
CHECKSUM="c1ece653891bb2a5f55ca25e3f4e8f35"

RDEPEND="gmp"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	case "$ARCH" in
		i686) domv "$destdir"/{,/usr/share/gdb/auto-load/}usr/lib/libisl.so.10.0.0-gdb.py ;;
    	      x86_64) domv "$destdir"/{,/usr/share/gdb/auto-load/}usr/lib64/libisl.so.10.0.0-gdb.py ;;
	esac
}

