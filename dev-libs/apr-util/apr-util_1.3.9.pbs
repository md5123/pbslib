DESCRIPTION=" Apache Portable Runtime Utility Library "
HOMEPAGE="http://apr.apache.org/"
LICENSE="APACHE"
PACKAGER="StartOS Developers"

SRC_URI="ftp://ftp.oregonstate.edu/pub/apache/apr/"$N-$V".tar.bz2"

RDEPEND="apr expat glibc sqlite util-linux-ng"
BDEPEND=""
RECOMMENDED=""

NOTES="
OpenLDAP -- Add --with-ldap to configure
Berkeley DB -- Add --with-berkeley-db=/usr to configure
SQLite3
SQLite
Expat
"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--with-apr=/usr/bin/apr-1-config "
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

