#
# YLmf_OS package build script
#

DESCRIPTION="A library for applications dealing with netlink socket"
HOMEPAGE="http://people.suug.ch/~tgr/libnl/"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"

SRC_URI="http://people.suug.ch/~tgr/"$N"/files/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND="${RDEPEND} "
RECOMMENDED=""

NOTES=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	sed -i "/^#include.*<stdlib.h>/a\#include <limits.h>" include/netlink-local.h
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
