DESCRIPTION="Google's Protocol Buffers -- an efficient method of encoding structured data"
HOMEPAGE="http://code.google.com/p/protobuf/"
LICENSE="APACHE"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://protobuf.googlecode.com/files/"$N-$V".tar.bz2"

RDEPEND="gcc-libs zlib"
BDEPEND="python"
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    ./autogen.sh
    config+="--disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
