DESCRIPTION="Library to provide file system information"
HOMEPAGE="http://www.marcuscom.com"
LICENSE="GPL"
PACKAGER="StartOS Developers"
 
SRC_URI="ftp://lug.mtu.edu/gentoo/distfiles/"$N-$V".tar.bz2"

RDEPEND="glibc"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_build() {
    make E="@echo" RANLIB=ranlib AR=ar Q=@
}

pbs_install() {
    docp libvolume_id.pc    "$destdir"/usr/share/pkgconfig
    docp libvolume_id.h     "$destdir"/usr/include
    docp libvolume_id.so.0  "$destdir"/usr/lib
    doln /usr/lib/libvolume_id.so.0  "$destdir"/usr/lib/libvolume_id.so
}

