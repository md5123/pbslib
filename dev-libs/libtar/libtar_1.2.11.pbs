#
# YLmf_OS package build script
#

DESCRIPTION="C library for manipulating tar archives"
HOMEPAGE="http://www.feep.net/libtar/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="ftp://ftp.feep.net/pub/software/"$N"/"$N-$V".tar.gz"

RDEPEND="glibc zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_patch libtar-1.2.11-6-debian.patch
	cp /usr/share/automake-1.11/config.* autoconf
	autoreconf -f -v -i
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

