DESCRIPTION="C library for manipulating tar archives"
HOMEPAGE="http://www.feep.net/libtar/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="ftp://ftp.feep.net/pub/software/"$N"/"$N-$V".tar.gz"

RDEPEND="glibc zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	dopatch libtar-1.2.11-6-debian.patch
	cp /usr/share/automake-1.11/config.* autoconf
	autoreconf -f -v -i
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

