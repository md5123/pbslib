#
# YLmf_OS package build script
#

DESCRIPTION="A minimal libc subset for use with initramfs."
HOMEPAGE="http://www.zytor.com/mailman/listinfo/klibc"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://www.kernel.org/pub/linux/libs/"$N"/1.5/"$N-$V".tar.bz2"

RDEPEND=""
BDEPEND="linux-kernel-headers"
RECOMMENDED=""

pbs_unpack() {
	ypkg_unpack
}

pbs_build() {
	ypkg_doln /usr/src/linux linux
	ypkg_make
}

pbs_install() {
	sed -i '/SHLIBDIR = \/lib/aINSTALLROOT = '"$YPPATH_DEST"'' scripts/Kbuild.install
	ypkg_mkinstall
	ypkg_docp "$FILES_PATH"/files/klibc.m4 /usr/share/aclocal
	cd "$YPPATH_DEST"
	ypkg_domv  usr/man usr/share/
}

