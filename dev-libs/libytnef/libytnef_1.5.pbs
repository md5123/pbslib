DESCRIPTION="Yerase's TNEF Stream Reader library (decode winmail.dat)"
HOMEPAGE="http://freshmeat.net/projects/ytnef/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://downloads.sourceforge.net/ytnef/$N-$V.tar.gz"
CHECKSUM="6c44b955f33cf714c75a7bbe895cc352"

RDEPEND="glibc"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    rm -f "$PKGDIR"/usr/lib"$LIBDIRSUFFIX"/libytnef.a
}



