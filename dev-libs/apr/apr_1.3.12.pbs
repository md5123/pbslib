#
# YLmf_OS package build script
#

DESCRIPTION="Apache Portable Runtime Library"
HOMEPAGE="http://apr.apache.org/"
LICENSE="APACHE"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
 
SRC_URI="ftp://ftp.oregonstate.edu/pub/apache/apr/"$N-$V".tar.bz2"

RDEPEND="glibc util-linux-ng"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--with-installbuilddir=/usr/lib/apr-1"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

