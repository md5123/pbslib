DESCRIPTION="Library to pack up hard disk files and directories into a ISO 9660 disk image"
HOMEPAGE="http://libburnia-project.org/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://files.libburnia-project.org/releases/"$N-$V".tar.gz"

RDEPEND="acl zlib"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--enable-libacl --enable-xattr --disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}

