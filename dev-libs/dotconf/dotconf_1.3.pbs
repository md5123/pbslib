DESCRIPTION="A C library for parsing configuration files"
HOMEPAGE="https://github.com/williamh/dotconf"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="git://github.com/williamh/dotconf.git"

RDEPEND="glibc"
RECOMMENDED=""
BDEPEND="pkgconfig findutils"
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    git checkout v1.3
}

pbs_config() {
    autoreconf -i
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}

