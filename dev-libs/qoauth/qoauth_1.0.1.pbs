DESCRIPTION="A Qt-based library for OAuth support"
HOMEPAGE="http://github.com/ayoy/qoauth"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://files.ayoy.net/qoauth/release/current/src/"$N-$V"-src.tar.bz2"

RDEPEND="gcc-libs glib2 glibc openssl qca qt zlib"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
        dounpack
}

pbs_patch() {
	# Install libraries in /usr/lib/
	sed -i 's|lib64|lib|' src/src.pro
}

pbs_config() {
	qmake
}

pbs_build() {
	domake
}

pbs_install() {
	make INSTALL_ROOT="$destdir" install
}


