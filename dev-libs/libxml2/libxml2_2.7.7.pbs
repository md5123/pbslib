#
# YLmf_OS package build script
#

DESCRIPTION="Version 2 of the library to manipulate XML files"
HOMEPAGE="http://www.xmlsoft.org/"
LICENSE="MIT License"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="ftp://xmlsoft.org/"$N"/"$N-$V".tar.gz"

RDEPEND="glibc python zlib"
BDEPEND=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
	cd "$YPPATH_DEST"
	ypkg_doln /usr/include/libxml2/libxml  usr/include/libxml
}

