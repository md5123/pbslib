 # Turn on the additional warnings last, so -Werror doesn't affect other tests.
 
 AC_DEFUN([PLYMOUTH_CC_TRY_FLAG], [
diff -ur plymouth-0.8.2-ylmf2/src/libply/ply-utils.c plymouth-0.8.2-ylmf2.new/src/libply/ply-utils.c
--- plymouth-0.8.2-ylmf2/src/libply/ply-utils.c	2010-03-03 04:52:39.000000000 +0800
+++ plymouth-0.8.2-ylmf2.new/src/libply/ply-utils.c	2011-05-24 10:39:09.040630020 +0800
@@ -294,6 +294,7 @@
 {
   size_t bytes_left_to_write;
   size_t total_bytes_written = 0;
+  int is_a_socket = 1;
 
   assert (fd >= 0);
 
@@ -303,15 +304,28 @@
     {
       ssize_t bytes_written = 0;
 
-      bytes_written = write (fd,
-                             ((uint8_t *) buffer) + total_bytes_written,
-                             bytes_left_to_write);
+      if (is_a_socket)
+        bytes_written = send  (fd,
+                               ((uint8_t *) buffer) + total_bytes_written,
+                               bytes_left_to_write,
+                               0
+#if HAVE_DECL_MSG_NOSIGNAL
+                               |MSG_NOSIGNAL
+#endif
+                               );
+      else
+        bytes_written = write (fd,
+                               ((uint8_t *) buffer) + total_bytes_written,
+                               bytes_left_to_write);
+
 
       if (bytes_written > 0)
         {
           total_bytes_written += bytes_written;
           bytes_left_to_write -= bytes_written;
         }
+      else if ((errno == ENOTSOCK))
+        is_a_socket = 0;
       else if ((errno != EINTR))
         break;
     }
