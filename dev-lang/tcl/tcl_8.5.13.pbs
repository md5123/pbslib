DESCRIPTION="The Tcl scripting language"
HOMEPAGE="http://tcl.sourceforge.net/"
LICENSE="custom"
PACKAGER="StartOS Developers"
 
SRC_URI="http://downloads.sourceforge.net/"$N"/"$N$V"-src.tar.gz"
CHECKSUM="fa3a9bf9b2d6ed2431f1baa46f4058b8"

RDEPEND="glibc"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	cd unix
	[ x"$ARCH" = x"x86_64" ] && config+="--enable-64bit" || config+="--disable-64bit"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	make INSTALL_ROOT="$destdir" install install-private-headers
	dodoc ../license.terms
	doln /usr/bin/tclsh8.5 "$destdir"/usr/bin/tclsh 
}

