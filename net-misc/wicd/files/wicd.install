. /usr/lib/ybs/funcs

post_install() {
    gnome2_desktop_database_update
    gnome2_icon_cache_update 
    systemctl enable wicd.service
    start wicd ||true
}

pre_remove() {
    stop wicd
    systemctl disable wicd.service ||true
}

post_remove() {
    gnome2_desktop_database_update
    gnome2_icon_cache_update
}

post_upgrade() {
    systemctl --system daemon-reload
    post_install
}

post_downgrade() {
    post_upgrade
}

