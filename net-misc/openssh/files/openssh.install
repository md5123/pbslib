. /usr/lib/ybs/funcs

post_install() {
	ypkg_groupadd -r "sshd"
	ypkg_useradd -c "sshd PrivSep" -d "/var/lib/sshd" -s "/bin/false" -r -N -G "sshd" "sshd"
	 yes y |ssh-keygen -t dsa -f /etc/ssh/ssh_host_dsa_key
	 yes y |ssh-keygen -t rsa -f /etc/ssh/ssh_host_rsa_key
	 return 0
}

post_remove() {
	ypkg_userdel -r "sshd"
	ypkg_groupdel "sshd"
}
