DESCRIPTION="The whois client by Marco d'Itri"
HOMEPAGE="http://www.linux.it/~md/software"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.debian.org/debian/pool/main/w/$N/"$N"_$V.tar.xz"
CHECKSUM="2e33c03536082ae8156b2cbe78c0299d"

RDEPEND="libidn"
RECOMMENDED=""
BDEPEND="perl"
OPTIONAL=""
CONFLICT=""
