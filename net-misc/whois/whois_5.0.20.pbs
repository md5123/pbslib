pbs_unpack() {
    dounpack
}

pbs_build() {
    domake prefix=/usr CFLAGS=\"$CFLAGS\" HAVE_LIBIDN=1
}

pbs_install() {
    make prefix=/usr BASEDIR="$PKGDIR" install-whois
}

