. /usr/lib/ybs/funcs

unit="ntpd.service"

post_install() {
	douseradd -c "ntp user" -d "/dev/null" -s "/bin/false" -r "ntp"
	dogroupadd -r "ntp"
	# Systemd unit 
	systemctl enable $unit
	start ntpd ||true
}

pre_remove() {
	stop ntpd
	systemctl disable $unit
}

post_remove() {
	douserdel -r "ntp"
	dogroupdel "ntp" ||true
}

post_upgrade()  {
	systemctl --system daemon-reload
	restart ntpd ||true
}

post_downgrade() {
	post_upgrade
}

