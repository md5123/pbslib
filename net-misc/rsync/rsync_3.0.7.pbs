DESCRIPTION="File transfer program to keep remote files into sync"
HOMEPAGE="http://rsync.samba.org/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://rsync.samba.org/ftp/"$N"/"$N-$V".tar.gz"

RDEPEND="acl popt"
BDEPEND=""

INSTALL="$N.install"

NOTES="
\"/etc/rsyncd.conf\" - rsyncd rc file!
motd file = /home/rsync/welcome.msg
use chroot = yes
[localhost]
path = /home/rsync
comment = Default rsync module
read only = yes
list = yes
uid = rsyncd
gid = rsyncd
"

pbs_unpack() {
        dounpack
}

pbs_config() {
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

