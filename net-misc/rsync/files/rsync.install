. /usr/lib/ybs/funcs

config="/etc/rsyncd.conf"
sample="/usr/share/rsync/rsyncd.conf.sample"

post_install() {
    [ -e $config ] || cp $sample $config
    return 0
}

post_remove() {
    [ -e $config ] && rm $config
    return 0
}

post_upgrade() {
    post_install
}

post_downgrade() {
    post_install
}

