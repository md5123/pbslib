#
# YLmf_OS package build script
#

DESCRIPTION="A spell checker replacement for ispell"
HOMEPAGE="http://aspell.net/"
 
SRC_URI="ftp://ftp.gnu.org/gnu/"$N"/"$N-$V$R".tar.gz"

RDEPEND="gcc glibc ncurses"
BDEPEND="gcc-dev glibc-dev ncurses-dev"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
