HOMEPAGE="http://ghostscript.com/"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"
 
SRC_URI="http://ftp.gnu.org/gnu/ghostscript/"$N-$V$R".tar.bz2"

RDEPEND="libXt libSM libICE libXext libX11 libjpeg-turbo cups krb5 e2fsprogs glibc gnutls libpng zlib
         fontconfig util-linux-ng libxcb libtiff libgcrypt libgpg-error freetype expat libXau libXdmcp gtk+ 
         atk glib2 pango cairo freetype fontconfig libXt libSM libICE libXext libxml2 pixman libXi libXrandr libXcursor
         libXcomposite libXdamage libXfixes directfb libXrender util-linux-ng"
BDEPEND=" "
