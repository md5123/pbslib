NOTES=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	#The following causes -fPIC to be passed to the compiler when building shared libraries:
	#sed -i "s/CFLAGS='/&-fPIC /g" base/unix-dll.mak
	ypkg_config
}

pbs_build() {
	ypkg_make so all
}

pbs_install() {
	ypkg_mkinstall soinstall
}

