#
# YLmf_OS package build script
#

DESCRIPTION="XSL Stylesheets for Docbook"
HOMEPAGE="http://wiki.docbook.org/topic/DocBookXslStylesheets"
LICENSE="custom"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://downloads.sourceforge.net/docbook/"$N-$V".tar.bz2 http://downloads.sourceforge.net/docbook/"$N"-doc-"$V".tar.bz2"

RDEPEND=""
BDEPEND=""
RECOMMENDED=""

INSTALL="$N.install"

pbs_unpack() {
        ypkg_unpack
}

pbs_install() {
	tar xf "$YPPATH_SOURCE"/"$N"-doc-"$V".tar.bz2 --strip-components=1
	ypkg_docp VERSION common eclipse extensions fo highlighting html  \
	          htmlhelp images javahelp lib manpages params profiling  \
	  	  roundtrip slides template tools website xhtml xhtml-1_1 \
		"$YPPATH_DEST"/usr/share/xml/docbook/xsl-stylesheets-"$V"
	ypkg_dodoc README
}

