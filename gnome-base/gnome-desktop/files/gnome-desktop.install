. /usr/lib/ybs/funcs

post_install() {
	gnome2_rarian_sk_update
	gnome2_desktop_database_update
	
	gnome2_install_defaut_gconf "string" "/desktop/gnome/background/picture_filename"       "/usr/share/backgrounds/default.jpg"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/background/picture_options"        "zoom"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/peripherals/keyboard/bell_mode"    "off"
	gnome2_install_defaut_gconf "bool"   "/desktop/gnome/sound/enable_esd"                  "True"
	gnome2_install_defaut_gconf "bool"   "/desktop/gnome/sound/event_sounds"                "True"
	
	# Fonts 
	gnome2_install_defaut_gconf "string" "/desktop/gnome/interface/font_name"              "Ubuntu 11"
	#gnome2_install_defaut_gconf  "string" "/desktop/gnome/interface/font_name"              "WenQuanYi Micro Hei 11"
	gnome2_install_defaut_gconf  "string" "/desktop/gnome/interface/document_font_name"     "Sans 10"
	#gnome2_install_defaut_gconf "string" "/desktop/gnome/interface/monospace_font_name"    "Monospace 10" 
	gnome2_install_defaut_gconf "string" "/desktop/gnome/interface/monospace_font_name"    "DejaVu Sans Mono 10" 
	#gnome2_install_defaut_gconf  "string" "/desktop/gnome/interface/monospace_font_name"    "WenQuanYi Micro Hei Mono 11"
	gnome2_install_defaut_gconf "float"  "/desktop/gnome/font_rendering/dpi"                "96.0"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/font_rendering/hinting"            "slight"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/font_rendering/rgba_order"         "rgb"

	#
	gnome2_install_defaut_gconf "bool" "/desktop/gnome/peripherals/keyboard/remember_numlock_state"  "True"
	
	# chromium is default browser
	gnome2_install_defaut_gconf "string" "/desktop/gnome/applications/browser/exec"    "/usr/bin/chromium"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/unknown/command" "/usr/bin/chromium %s"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/http/command"    "/usr/bin/chromium %s"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/https/command"   "/usr/bin/chromium %s"
	gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/about/command"   "/usr/bin/chromium %s"
	
	gnome2_gconfd_reload
}


post_remove () {
	gnome2_rarian_sk_update
	gnome2_desktop_database_update
	gnome2_gconfd_reload
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

