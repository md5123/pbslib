. /usr/lib/ybs/funcs

files="/etc/gconf/schemas/desktop_gnome_peripherals_keyboard_xkb.schemas"

post_install() {
	gnome2_install_schema $files
	gnome2_gconfd_reload
}

pre_remove() {
	gnome2_uninstall_schema $files
}

post_upgrade() {
	gnome2_gconfd_reload
}

post_downgrade() {
	gnome2_gconfd_reload
}
