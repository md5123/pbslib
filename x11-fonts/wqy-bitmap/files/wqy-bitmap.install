. /usr/lib/ybs/funcs

post_install() {
	 dofont /usr/share/fonts/wenquanyi/wqy-bitmap
}

post_remove() {
	rm -rf /usr/share/fonts/wenquanyi/wqy-bitmap/{fonts.dir,fonts.scale}
	rmdir /usr/share/fonts/wenquanyi/wqy-bitmap/ ||return 0
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

