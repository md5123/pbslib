DESCRIPTION="X.Org font utilities"
HOMEPAGE="http://xorg.freedesktop.org/"
GROUP="x11-fonts"
 
SRC_URI="http://www.x.org/releases/individual/font/$N-$V.tar.bz2"

RDEPEND=""
BDEPEND=""

pbs_unpack()
{
        dounpack
}

pbs_config()
{
	
	config+=" --with-fontrootdir=/usr/share/fonts "
	doconfig
}

pbs_build()
{
	domake
}

pbs_install()
{
	domkinstall
}
