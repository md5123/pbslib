#
# Ylmf OS package build script
#

DESCRIPTION="X.Org font utilities"
HOMEPAGE="http://xorg.freedesktop.org/"
 
SRC_URI="http://www.x.org/releases/X11R7.6/src/font/"$N-$V$R".tar.bz2"

RDEPEND="glibc"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--with-fontrootdir=/usr/share/fonts" 
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}
