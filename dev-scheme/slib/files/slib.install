. /usr/lib/ybs/funcs

post_install() {
	/usr/bin/guile -c "((use-modules (ice-9 slib))(require 'new-catalog)(quit))"
	ypkg_install_info slib.info.gz
}

pre_remove() {
	rm /usr/share/guile/site/slibcat
	ypkg_remove_info slib.info.gz
}

post_upgrade()  {
	post_install
}

post_downgrade() {
	post_install
}
