#
# YLmf_OS package build script
#

DESCRIPTION="SLIB is a portable library for the programming language Scheme."
HOMEPAGE="http://people.csail.mit.edu/jaffer/SLIB"
REPO=""
LICENSE="http://people.csail.mit.edu/jaffer/SLIB_COPYING.txt"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://groups.csail.mit.edu/mac/ftpdir/scm/slib-3b3.zip"

RDEPEND=""
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

NOTES=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG=" --prefix=/usr
		     --sysconfdir=/etc
		     --localstatedir=/var
	             --infodir=/usr/share/info
		     --mandir=/usr/share/man"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

