. /usr/lib/ybs/funcs

post_install() {
	# Creating plugdev group if he isn't already there
	if ! getent group plugdev >/dev/null; then
		addgroup --system plugdev
	fi

	# Creating usbmux user if he isn't already there
	if ! getent passwd usbmux >/dev/null; then
		adduser --system --ingroup plugdev --no-create-home --gecos "usbmux daemon" usbmux || true
	fi
}

post_remove() {
	douserdel usbmux ||true
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

