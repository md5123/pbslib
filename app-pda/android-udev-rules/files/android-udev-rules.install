. /usr/lib/ybs/funcs

post_install() {
	if ! getent group adbusers; then
		groupadd adbusers
	fi

	cat << EOF
===> In order to use adb, you have to be in the 'adbusers' group
===> For that, use: gpasswd -a USERNAME adbusers
EOF
}

post_remove() {
	if getent group adbusers; then
		groupdel adbusers
	fi

	return 0
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

