DESCRIPTION="Ruby bindings for cairo"
HOMEPAGE="http://cairographics.org/rcairo"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://cairographics.org/releases/rcairo-"$V".tar.gz"

RDEPEND="ruby cairo"
RECOMMENDED=""
BDEPEND="ruby-pkgconfig ruby"
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
        dounpack
}

pbs_config() {
    ruby extconf.rb --vendor
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}

