. /usr/lib/ybs/funcs

gname="ldap"

post_install() {
	groupadd -g 439 $gname &>/dev/null
	useradd -u 439 -g $gname -d /var/lib/openldap -s /bin/false $gname &>/dev/null
	chown -R $gname:$gname /var/lib/openldap &>/dev/null
}

post_remove() {
	douserdel $gname
	dogroupdel $gname
}

post_upgrade() {
	post_install
}

