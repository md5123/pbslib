DESCRIPTION="Basepack of plugins for gstreamer"
HOMEPAGE="http://gstreamer.sourceforge.net"
LICENSE="LGPL"
PACKAGER="StartOS Developers"

SRC_URI="http://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-"$V".tar.xz"

RDEPEND="alsa-lib cdparanoia gstreamer libSM libtheora libvisual libvorbis libXv orc pango"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
	sed -i '/AC_PATH_XTRA/d' configure.ac
}

pbs_config() {
	config+="--disable-static --enable-experimental"
	autoreconf	
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

