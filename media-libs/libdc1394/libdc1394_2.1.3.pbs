pbs_unpack() {
    dounpack
}

pbs_patch() {
	dopatch rename-usb_init.patch videodev-compile-fix.patch
}

pbs_config() {
	config+=""
	autoreconf -i
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

