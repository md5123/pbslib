DESCRIPTION="Library to interface with IEEE 1394 cameras following the IIDC specification"
HOMEPAGE="http://sourceforge.net/projects/libdc1394/"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://downloads.sourceforge.net/"$N"/"$N-$V".tar.gz"
CHECKSUM="d8b2cbfae1b329fdeaa638da80427334"

RDEPEND="libraw1394 libusbx"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
