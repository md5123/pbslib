pbs_unpack() {
        dounpack
}

pbs_patch() {
	dopatch mediastreamer-ffmpeg.patch
}

pbs_config() {
	config+="--disable-tests"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}


