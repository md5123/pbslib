#
# YLmf_OS package build script
#

DESCRIPTION=" library for converting WMF files"
HOMEPAGE="http://wvware.sourceforge.net/"
 
SRC_URI="http://downloads.sourceforge.net/project/wvware/"$N"/"$V"/"$N-$V$R".tar.gz"

RDEPEND="expat freetype glib2 glibc gtk+ libjpeg-turbo libpng libX11 libXau libxcb libXdmcp zlib"
BDEPEND="expat-dev freetype-dev glib2-dev glibc-dev gtk+-dev libjpeg-turbo-dev libpng-dev libX11-dev libXau-dev libxcb-dev libXdmcp-dev zlib-dev"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
