#
# YLmf_OS package build script
#

DESCRIPTION="Advanced Linux Sound Architecture Library"
HOMEPAGE=" http://www.alsa-project.org/"
 
SRC_URI="ftp://ftp.alsa-project.org/pub/utils/"$N-$V$R".tar.bz2"

RDEPEND="alsa-lib glibc ncurses"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--disable-xmlto"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}
