DESCRIPTION="A complete, cross-platform solution to record, convert and stream audio and video."
HOMEPAGE="http://libav.org/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://libav.org/releases/"$N-$V".tar.xz"
CHECKSUM="9000cb3ec3e37bd442b9049a57b923187818a5ce"

RDEPEND=""
RECOMMENDED=""
BDEPEND=""
CONFLICT="ffmpeg"

pbs_unpack() {
        dounpack
}

pbs_config() {
	cd "$N-$V"
	config="--prefix=/usr --libdir=/usr/lib --mandir=/usr/share/man --enable-shared"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}


