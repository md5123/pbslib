DESCRIPTION="A simple dynamic window manager for X, with features nicked from ratpoison and dwm"
HOMEPAGE="http://aerosuidae.net/musca.html"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://aerosuidae.net/"$N-$V".tgz"
CHECKSUM="e067a8e39b1a97d62fc8e43800edee70"

RDEPEND="glibc libX11 libXau libxcb libXdmcp dmenu"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_patch() {
	dopatch musca-0.9.24-make.patch
}

pbs_build() {
	domake
}

pbs_install() {
	docp apis musca xlisten "$destdir"/usr/bin/
	doman musca.1  
}

