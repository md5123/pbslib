LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://downloads.sourceforge.net/project/sylpheed-claws/Claws%20Mail/"$V"/"$N-$V".tar.gz"

RDEPEND="openldap berkeley-db cairo curl cyrus-sasl dbus dbus-glib enchant expat fontconfig freetype gcc-libs gdk-pixbuf2 glib2 glibc gnutls gpgme gtk2 libassuan libetpan libffi libgcrypt libgpg-error libICE libidn libSM libssh2 libtasn1 libX11 libXau libxcb libXcomposite libXcursor libXdamage libXdmcp libXext libXfixes libXi libXrandr libXrender openssl pango pixman rtmpdump startup-notification util-linux zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

