pbs_unpack() {
        ypkg_unpack
}

pbs_install() {
	./INSTALL --install_path="$YPPATH_DEST"/opt
	cd "$YPPATH_DEST"
	ypkg_dodesktop "adobe-reader.desktop" "adobe-reader.png"
}

pbs_postinst() {
	gnome2_desktop_database_update
}
