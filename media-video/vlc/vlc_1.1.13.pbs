#
# Ylmf OS package build script
#

DESCRIPTION="A free and open source cross-platform multimedia player and framework that plays most multimedia files."
COMMENTS="VLC is a free and open source cross-platform multimedia player and framework that plays most multimedia files as well as DVD, Audio CD, VCD, and various streaming protocols."
HOMEPAGE="http://www.videolan.org/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://download.videolan.org/pub/videolan/"$N"/"$V"/"$N-$V".tar.bz2"
CHECKSUM="9678fb7a04808b6e0de63746d35e4bb1"
 
RDEPEND="a52dec alsa-lib atk attr audiofile avahi bzip2 cairo cyrus-sasl dbus dbus-glib directfb esound expat faad2 ffmpeg flac fontconfig freetype fribidi gcc-lib gconf gdk-pixbuf glib2 glibc gnome-vfs gnutls gtk+ jack-audio-connection-kit json-c keyutils krb5 lame libav libcap libcddb libcroco libdrm libgcrypt libgpg-error libICE libmad libmodplug libmpcdec libmpeg2 libmtp libnotify libogg libpng libproxy librsvg libsamplerate libsdl libSM libsndfile libtasn1 libtheora libupnp libusb libusb-compat libva libvorbis libX11 libXau libxcb libXcomposite libXcursor libXdamage libXdmcp libXext libXfixes libXi libxml2 libXrandr libXrender libXt libXtst libXxf86vm lirc mesa nas ncurses opencore-amr openldap openssl orbit orc pango pixman portaudio pulseaudio rtmpdump samba schroedinger sdl-image speex sqlite taglib talloc tdb udev util-linux-ng v4l-utils x264 xcb-util xvidcore zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--disable-qt4 
	         --disable-skins2
		 --disable-postproc
		 --disable-rpath 
	         --enable-faad
                 --enable-v4l 
		 --enable-snapshot 
                 --enable-dbus-control 
		 --enable-nls 
		 --enable-lirc 
		 --enable-pvr 
		 --enable-ncurses 
		 --enable-upnp 
		 --enable-realrtsp"
		 #--with-live555-tree=/usr/lib/live 
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

