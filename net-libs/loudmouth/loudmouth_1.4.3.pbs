#
# YLmf_OS package build script
#

DESCRIPTION="a lightweight and easy-to-use C library for programming with the XMPP protocol."
HOMEPAGE="http://www.loudmouth-project.org/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="ftp://lug.mtu.edu/gentoo/distfiles/"$N-$V".tar.bz2"

RDEPEND="glib2 glibc libidn openssl zlib"
BDEPEND="gnutls-dev"
RECOMMENDED=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--disable-debug 
	             --without-asyncns 
		     --with-ssl=gnutls 
		     --without-asyncns 
		     --with-ssl=openssl"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}

