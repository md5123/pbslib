. /usr/lib/ybs/funcs

service="cups.service"

post_install() {
    xdg-icon-resource forceupdate --theme hicolor 2> /dev/null
    systemctl enable "$service"
    start cups || true
}       

pre_remove() {
    systemctl disable "$service" || true
}

post_upgrade() {
    systemctl --system daemon-reload
    systemctl enable "$service"
    restart cups ||true
}

