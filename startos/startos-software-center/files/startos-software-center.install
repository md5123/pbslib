. /usr/lib/ybs/funcs

schemas_file="/usr/share/softwarecenter/ypk-thumbnailer.schemas"
mime_file="/usr/share/softwarecenter/ypk-package.xml"

post_install() {
    gnome2_install_schema "$schemas_file"
    gnome2_install_mine   "$mime_file"
    gnome2_mime_database_update
    gnome2_desktop_database_update
    gnome2_gconfd_reload
}

pre_remove() {
    gnome2_uninstall_schema "$schemas_file"
    gnome2_uninstall_mine   "$mime_file"
}

post_remove() {
    gnome2_mime_database_update
    gnome2_desktop_database_update
    gnome2_gconfd_reload
}

post_upgrade() {
    post_install
}

post_downgrade() {
    post_install
}

