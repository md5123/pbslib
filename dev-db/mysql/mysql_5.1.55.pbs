DESCRIPTION="A fast, multi-threaded, multi-user SQL database server."
HOMEPAGE="http://www.mysql.com/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://download.softagency.net/MySQL/Downloads/MySQL-5.1/"$N-$V$R".tar.gz"

RDEPEND="gcc-lib glibc ncurses zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	cd "$destdir"
	doln /usr/lib/mysql/libmysqlclient.so      usr/lib/libmysqlclient.so
	doln /usr/lib/mysql/libmysqlclient_r.so    usr/lib/libmysqlclient_r.so
	doln /usr/lib/mysql/libmysqlclient.so.16   usr/lib/libmysqlclient.so.16
	doln /usr/lib/mysql/libmysqlclient_r.so.16 usr/lib/libmysqlclient_r.so.16 
}

