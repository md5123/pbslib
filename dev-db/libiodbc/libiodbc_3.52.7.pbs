DESCRIPTION="ODBC Interface for Linux."
HOMEPAGE="http://www.iodbc.org/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://www.iodbc.org/downloads/iODBC/"$N-$V$R".tar.gz"

RDEPEND="glibc"
BDEPEND="chrpath"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--disable-gui
		     --disable-libodbc"
	doconfig
}

pbs_build() {
	make
}

pbs_install() {
	domkinstall
	# 
	cd "$destdir"
	chrpath -d usr/bin/iodbctest{,w}
	rm -rf usr/share/libiodbc/
}

