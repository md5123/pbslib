DESCRIPTION="Independent Open DataBase Connectivity for Linux"
HOMEPAGE="http://www.iodbc.org/"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://downloads.sourceforge.net/iodbc/$N-$V.tar.gz"
CHECKSUM="9889f95f632f10895ff53b8a22162810"

RDEPEND="glibc"
BDEPEND="chrpath"
RECOMMENDED=""
CONFLICT="iodbc"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--includedir=/usr/include/libiodbc
             --disable-gui 
             --disable-libodbc 
             --disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    cd "$destdir"
    chrpath -d usr/bin/iodbctest{,w}
    rm -rf usr/share/libiodbc/
}

