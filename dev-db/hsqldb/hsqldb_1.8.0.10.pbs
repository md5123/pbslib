#
# YLmf_OS package build script
#

DESCRIPTION="HSQLDB Java libraries"
HOMEPAGE="http://hsqldb.org/"
REPO=""
LICENSE="custom"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://nchc.dl.sourceforge.net/project/hsqldb/hsqldb/hsqldb_1_8_0/hsqldb_1_8_0_10.zip"

RDEPEND=""
BDEPEND="jdk apache-ant"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_install() {
	. /etc/profile.d/jdk.sh
	. /etc/profile.d/jre.sh
	. /etc/profile.d/apache-ant.sh

	cd build && ant jar && cd ..

	ypkg_docp lib/hsqldb.jar "$YPPATH_DEST"/"$JAVA_HOME"
	ypkg_dodoc doc/hsqldb_lic.txt
}
