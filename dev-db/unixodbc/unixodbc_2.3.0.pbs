DESCRIPTION="an open specification for providing predictable API to access Data Source"
COMMENTS="ODBC is an open specification for providing application developers with a predictable API with which to access Data Sources. Data Sources include SQL Servers and any Data Source with an ODBC Driver. "
HOMEPAGE="http://www.unixodbc.org/"
LICENSE="GPL2 LGPL2.1"
PACKAGER="StartOS Developers"

SRC_URI="http://www.unixodbc.org/unixODBC-"$V".tar.gz"

RDEPEND=""
RECOMMENDED=""
BDEPEND=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

