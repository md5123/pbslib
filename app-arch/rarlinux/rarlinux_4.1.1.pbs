DESCRIPTION="RAR compressor/uncompressor"
HOMEPAGE="http://www.rarlab.com/"
LICENSE="custom"
PACKAGER="StartOS Developers"

SRC_URI="http://www.rarlab.com/rar/"$N-$V".tar.gz"
CHECKSUM="6bdc5e28f28adb783270723303567f93"

RDEPEND="gcc-lib glibc"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT="unrar"

pbs_unpack() {
        dounpack
}

pbs_install() {
	docp rar unrar "$destdir"/usr/bin/
	docp rarfiles.lst "$destdir"/etc/
	docp default.sfx "$destdir"/usr/lib/
	dodoc license.txt
}

