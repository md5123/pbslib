#
# Ylmf OS package build script
#

DESCRIPTION="Object-oriented python bindings for subversion"
HOMEPAGE="http://pysvn.tigris.org/"
LICENSE="Apache"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://pysvn.barrys-emacs.org/source_kits/"$N-$V".tar.gz"
CHECKSUM="010a80f0058713209d62e96b20afbde9"

RDEPEND="subversion expat openssl"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	cd Source
	python setup.py configure
}

pbs_build() {
	domake
}

pbs_install() {
	docp pysvn/__init__.py pysvn/_pysvn_2_6.so "$destdir"/usr/lib/python2.6/site-packages/pysvn/
	dodoc ../LICENSE.txt
}

