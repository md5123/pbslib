DESCRIPTION="SIP is an extension module generator similar to SWIG but is specifically designed for creating Python modules"
HOMEPAGE="http://pypi.python.org/pypi/SIP"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://www.riverbankcomputing.com/static/Downloads/"$N"4/"$N-$V".tar.gz"

RDEPEND="gcc-lib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	python configure.py CFLAGS="${CFLAGS}" LFLAGS="${LDFLAGS}"
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	dodoc LICENSE
}

