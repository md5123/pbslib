#
# YLmf_OS package build script
#

DESCRIPTION="GLib's GObject library bindings for Python"
HOMEPAGE="http://www.pygtk.org/"
LICENSE="GPLv2"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://ftp.acc.umu.se/pub/gnome/bindings/2.32/2.32.1/sources/python/"$N-$V".tar.bz2"

RDEPEND="cairo expat fontconfig freetype glib2 glibc gobject-introspection libffi libpng libX11 libXau libxcb libXdmcp libXrender pixman zlib"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_patch ylmfos_disable-pygobject_register_sinkfunc-msg-2.26.0.patch
	YPB_CONFIG+="--disable-static"
	ypkg_config
}

pbs_build() {
	make $MAKEOPTS
}

pbs_install() {
	make DESTDIR="$YPPATH_DEST" install
}

