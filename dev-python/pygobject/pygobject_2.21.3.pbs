#
# YLmf_OS package build script
#

DESCRIPTION="GLib's GObject library bindings for Python"
HOMEPAGE="http://www.pygtk.org/"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"

SRC_URI=" http://ftp.gnome.org/pub/gnome/bindings/2.30/2.30.2/sources/python/"$N-$V$R".tar.bz2"

RDEPEND="python libffi"
BDEPEND="${RDEPEND} python glib2"
RECOMMENDED=""

NOTES="http://wiki.linuxfromscratch.org/blfs/wiki/pygobject"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+="--disable-static"
	ypkg_config
}

pbs_build() {
	ypkg_make make
}

pbs_install() {
	ypkg_mkinstall make
}
