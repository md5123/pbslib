#
# YLmf_OS package build script
#

DESCRIPTION="GLib's GObject library bindings for Python"
HOMEPAGE="http://www.pygtk.org/"
LICENSE="GPL-2"
PACKAGER="<ylmfos@115.com>"

SRC_URI="http://ftp.gnome.org/pub/gnome/bindings/2.30/2.30.2/sources/python/"$N-$V".tar.bz2"

RDEPEND="glib2 gdk-pixbuf glibc libffi zlib"
BDEPEND="   "
RECOMMENDED=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	ypkg_patch ylmfos_disable-pygobject_register_sinkfunc-msg.patch
	YPB_CONFIG+="--disable-static"
	ypkg_config
}

pbs_build() {
	ypkg_make make
}

pbs_install() {
	ypkg_mkinstall make
}
