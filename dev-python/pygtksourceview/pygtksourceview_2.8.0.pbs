#
# YLmf_OS package build script
#

DESCRIPTION="GTK+2 bindings for Python"
HOMEPAGE="http://www.pygtk.org/"
LICENSE="GPL-2"
PACKAGER="<ylmfos@115.com>"
SRC_URI="http://ftp.gnome.org/pub/gnome/sources/pygtksourceview/2.8/$N-$V.tar.bz2"

RDEPEND=""
BDEPEND=" gtksourceview pygtk"
RECOMMENDED="docbook-xml"

NOTES="http://wiki.linuxfromscratch.org/blfs/wiki/pygtksourceview"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+=" --prefix=/usr"
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
}
