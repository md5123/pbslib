DESCRIPTION="Python bindings for libsexy."
HOMEPAGE="http://www.chipx86.com/wiki/Libsexy"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://releases.chipx86.com/libsexy/"$N"/"$N-$V".tar.gz"

RDEPEND="libsexy python"
BDEPEND="pygtk-dev"
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_config() {
    config+="--disable-static --enable-shared"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
}

