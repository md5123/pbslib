. /usr/lib/ybs/funcs

post_install() {
    python -c 'from twisted.plugin import IPlugin, getPlugins; list(getPlugins(IPlugin))' >/dev/null 2>&1 || return 1
}

post_upgrade() {
    post_install
}

post_remove() {
    find /usr/lib"$LIBDIRSUFFIX"/python2.7/site-packages/twisted/plugins -name dropin.cache | xargs -r rm -f
}

