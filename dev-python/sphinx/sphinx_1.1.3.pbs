DESCRIPTION="Tool to create documentation for Python projects"
HOMEPAGE="http://sphinx.pocoo.org"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://pypi.python.org/packages/source/S/Sphinx/Sphinx-"$V".tar.gz"
CHECKSUm="8f55a6d4f87fc6d528120c5d1f983e98"

RDEPEND="jinja pygments docutils"
BDEPEND="distribute"
RECOMMENDED=""
CONFLICT=""
OPTIONAL="texlive-latexextra: for generation of PDF documentation"

pbs_unpack() {
    dounpack
}

pbs_config() {
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall --optimize=1
}

