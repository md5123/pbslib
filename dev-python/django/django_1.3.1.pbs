#
# Ylmf OS package build script
#

DESCRIPTION="High-level Python web framework"
COMMENTS="A high-level Python Web framework that encourages rapid development and clean, pragmatic design."
HOMEPAGE="http://pypi.python.org/pypi/Django"
LICENSE="BSD"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"
YARCH="any"

SRC_URI="http://media.djangoproject.com/releases/1.3/Django-"$V".tar.gz"
CHECKSUM="62d8642fd06b9a0bf8544178f8500767"

RDEPEND="python"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	docp_rename extras/django_bash_completion "$destdir"/etc/bash_completion.d/django
	dodoc LICENSE
	cd "$destdir"
	doln /usr/bin/django-admin.py usr/bin/django-admin
}

