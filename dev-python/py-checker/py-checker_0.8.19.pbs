DESCRIPTION="Python code checker"
HOMEPAGE="http://pychecker.sourceforge.net"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="python"
YARCH="any"

SRC_URI="http://downloads.sourceforge.net/sourceforge/pychecker/pychecker-$V.tar.gz"
CHECKSUM="c37182863dfb09209d6ba4f38fce9d2b"

RDEPEND="python"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
    dounpack
}

pbs_install() {
    domkinstall
    sed -i "s:$PKGDIR::" "$PKGDIR"/usr/bin/pychecker
    dodoc COPYRIGHT
}
