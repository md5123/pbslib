DESCRIPTION="Gnome Python interfaces for libraries not part of the core platform"
HOMEPAGE="http://www.daa.com.au/~james/pygtk/"
LICENSE="GPL,LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="python"

SRC_URI="http://ftp.gnome.org/pub/gnome/sources/gnome-python-extras/2.25/gnome-python-extras-$V.tar.bz2"
CHECKSUM="e69e5288466c960ed6f985bb10c9969b21ed85a4"

RDEPEND="libgtkhtml gdk-pixbuf2 gtkspell libgksu"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch gnome-python-extras-2.25.3-update-for-2.27.2.patch
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domake install-pkgconfigDATA DESTDIR="$PKGDIR"
    for i in egg gksu2 gtkhtml2 gtkspell;do 
        domkinstall -C "${i}"
    done
}
