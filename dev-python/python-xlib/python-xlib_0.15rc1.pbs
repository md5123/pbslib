#
# YLmf_OS package build script
#

DESCRIPTION="A fully functional X client library for Python, written in Python"
HOMEPAGE="http://python-xlib.sourceforge.net/"
LICENSE="GPL-2"
PACKAGER="hzx@115.com"
REPO="Testing"

SRC_URI="http://downloads.sourceforge.net/project/"$N"/"$N"/"$V$R"/"$N-$V$R".tar.bz2 "

RDEPEND=""
BDEPEND=" python"
RECOMMENDED=""

NOTES=""

pbs_unpack() {
        ypkg_unpack
}

pbs_build() {
	
	python setup.py build
}

pbs_install() {
	python setup.py install --prefix=/usr --root="$YPPATH_DEST"
	install -m755 -d "$YPPATH_DEST"/usr/share/doc/"$N-$V$R"
	cp -a COPYING NEWS README "$YPPATH_DEST"/usr/share/doc/"$N-$V$R" 
}
