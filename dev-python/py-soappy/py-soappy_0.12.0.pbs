DESCRIPTION="A module which implements a high-level interface to SOAP functions"
HOMEPAGE="http://pywebsvcs.sourceforge.net"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="python"
YARCH="any"

SRC_URI="http://downloads.sourceforge.net/pywebsvcs/SOAPpy-$V.tar.gz"
CHECKSUM="d0d29f9b6fb27bfadc69b64a36321e20"

RDEPEND="py-fpconst"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
  sed -i "s/from __future__ import nested_scopes/#\0/g" SOAPpy/*.py
}

pbs_config() {
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall --optimize=1
    dodoc LICENSE
}
