DESCRIPTION="Fast array and numerical python library"
HOMEPAGE="http://cairographics.org/pycairo/"
LICENSE="custom"
PACKAGER="StartOS Developers"

SRC_URI="http://downloads.sourceforge.net/"$N"/"$N-$V".tar.gz"
CHECKSUM="2bce18c08fc4fce461656f0f4dd9103e"

RDEPEND="glibc python"
BDEPEND=" "
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_build() {
	export Atlas=None
	export LDFLAGS="$LDFLAGS -shared"
	domake config_fc --fcompiler=gnu95
}

pbs_install() {
	domkinstall config_fc --fcompiler=gnu95
	dodoc LICENSE.txt 
}

