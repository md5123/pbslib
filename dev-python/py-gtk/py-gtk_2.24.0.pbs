DESCRIPTION="Python bindings for the GTK widget set"
HOMEPAGE="http://www.pygtk.org/"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="python"

SRC_URI="http://ftp.gnome.org/pub/gnome/sources/pygtk/${V%.*}/pygtk-$V.tar.bz2"
CHECKSUM="cd1c1ea265bd63ff669e92a2d3c2a88eb26bcd9e5363e0f82c896e649f206912"

RDEPEND="libglade py-cairo py-gobject"
BDEPEND="py-numpy"
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch python27.patch
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    docp gtk/gtk-extrafuncs.defs "$PKGDIR"/usr/share/pygtk/2.0/defs/
}
