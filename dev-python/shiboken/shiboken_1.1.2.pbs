DESCRIPTION="A tool for creating Python bindings for C++ libraries"
HOMEPAGE="http://www.pyside.org/"
LICENSE="LGPL"
PACKAGER="StartOS Developers"

SRC_URI="http://www.pyside.org/files/"$N-$V".tar.bz2"
CHECKSUM="0a37b5011b3a7276bf4584317412a4b6"

RDEPEND="gcc-lib glib2 glibc libxml2 libxslt openssl python qt-core zlib"
RECOMMENDED=""
BDEPEND="cmake"
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	doconfig -DCMAKE_BUILD_TYPE=Release
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}

