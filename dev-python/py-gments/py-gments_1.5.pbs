DESCRIPTION="Python syntax highlighter"
HOMEPAGE="http://pygments.org/"
LICENSE="BSD"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="python"
YARCH="any"

SRC_URI="http://pypi.python.org/packages/source/P/Pygments/Pygments-$V.tar.gz"
CHECKSUM="fe183e3886f597e41f8c88d0e53c796cefddc879bfdf45f2915a383060436740"

RDEPEND="py-distribute"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall -O1
    dodoc LICENSE
    docp_rename external/pygments.bashcomp "$PKGDIR"/usr/share/bash-completion/completions/pygmentize
}
