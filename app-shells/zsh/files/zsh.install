filelist="zsh.info.gz zsh.info-1.gz zsh.info-2.gz zsh.info-3.gz zsh.info-4.gz 
          zsh.info-5.gz zsh.info-6.gz"

post_install() {
	grep -q '/bin/zsh' /etc/shells || echo '/bin/zsh' >>/etc/shells
    doinstall_info $filelist
}

post_upgrade() {
	post_install
}

pre_remove() {
	sed -i '/^\/bin\/zsh/d' /etc/shells
    doremove_info $filelist
}
