. /usr/lib/ybs/funcs

post_install() {
	dogroupadd -r "avahi"
	douseradd -c "avahi users" -d "/dev/null" -s "/bin/false" -r "avahi"
	douseradd -c "avahi-autoipd users" -d "/dev/null" -s "/bin/false" -r "avahi-autoipd"
	gnome2_desktop_database_update
}

post_remove() {
	douserdel "avahi"
	douserdel "avahi-autoipd"
	dogroupdel "avahi"
	gnome2_desktop_database_update
}

