. /usr/lib/ybs/funcs

post_install() {
	gnome2_install_schema "/etc/gconf/schemas/apps_nautilus_preferences.schemas"
	# Make sure xfce thunar doesn't steal our job
	if [ -f /usr/share/applications/Thunar-folder-handler.desktop ]; then
		ypkg_domv_rename -f /usr/share/applications/Thunar-folder-handler.desktop{,.disabled}
	fi
	gnome2_rarian_sk_update
	gnome2_desktop_database_update
	gnome2_mime_database_update
	gnome2_icon_cache_update
	# For nautilus to control ftp (otherwise annoying error box arises)
	gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/ftp/command" "nautilus \"%s\""
	#gnome2_install_defaut_gconf "string" "/desktop/gnome/url-handlers/file/command" "nautilus \"%s\""
	#gnome2_install_defaut_gconf "bool"   "/desktop/gnome/url-handlers/file/enabled" "True"
	#gnome2_install_defaut_gconf "bool"   "/desktop/gnome/url-handlers/file/need-terminal" "false"
	gnome2_install_defaut_gconf "bool"   "/apps/nautilus/preferences/always_use_location_entry" "True"
	gnome2_install_defaut_gconf "bool"   "/apps/nautilus/desktop/volumes_visible" "false"
	#
	#gnome2_install_defaut_gconf "string" "/apps/nautilus/preferences/desktop_font"  "Ubuntu 10"
	gnome2_install_defaut_gconf "string" "/apps/nautilus/preferences/desktop_font"  "WenQuanYi Micro Hei 10"
	gnome2_gconfd_reload
}

