
post_install() {
        unset ARCH
	ykms install $1 $2
	
	# Update initramfs
	depmod -a
	update-initramfs -d -u ||true
}

post_remove() {
	ykms remove $1 $2
	
	# Update initramfs
	depmod -a
	update-initramfs -d -u ||true
}

post_upgrade() {
	post_install $1 $2
}

post_downgrade() {
	post_install $1 $2
}

