. /usr/lib/ybs/funcs

do_initramfs() {
	depmod -a "$KERNEL_DIST"
	update-initramfs -d -c -k "$KERNEL_DIST" ||true
}

post_install() {
        unset ARCH
	ykms install $1 $2
	
	# Update initramfs
	do_initramfs
}

post_remove() {
	ykms remove $1 $2
	
	# Update initramfs
	do_initramfs
}

post_upgrade() {
	post_install $1 $2
}

post_downgrade() {
	post_install $1 $2
}

