DESCRIPTION="The LLVM Project is a collection of modular and reusable compiler and toolchain technologies."
HOMEPAGE="http://llvm.org/"
LICENSE="University of Illinois Open Source License, an OSI-approved license"
PACKAGER="StartOS Developers"

SRC_URI="http://llvm.org/releases/"$V"/"$N-$V".tgz"

RDEPEND="gcc-lib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	cd "$destdir"
	domv_rename usr/docs usr/share/doc
}
