#
# Ylmf OS package build script
#

DESCRIPTION="Advanced version control system"
HOMEPAGE="http://subversion.apache.org/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://subversion.tigris.org/downloads/"$N-$V".tar.bz2"

RDEPEND="sqlite apr apr-util cyrus-sasl e2fsprogs expat glibc keyutils krb5 util-linux-ng zlib"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	wget http://www.webdav.org/neon/neon-0.28.4.tar.gz
	tar xf neon-0.28.4.tar.gz
	mv neon-0.28.4 neon
	config+="--disable-shared"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	docp_rename tools/client-side/bash_completion "${destdir}"/etc/bash_completion.d/subversion
}

