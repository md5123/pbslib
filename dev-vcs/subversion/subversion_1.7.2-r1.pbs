DESCRIPTION="Advanced version control system"
HOMEPAGE="http://subversion.apache.org/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://mirror.bjtu.edu.cn/apache/"$N"/"$N-$V".tar.bz2"

RDEPEND="apr-util cyrus-sasl file libgnome-keyring neon"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+="--with-openssl 
	         --with-apr=/usr 
		 --with-apr-util=/usr 
		 --with-zlib=/usr 
		 --with-neon=/usr 
		 --with-apxs 
		 --with-sqlite=/usr 
		 --with-gnome-keyring"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	docp_rename tools/client-side/bash_completion "${destdir}"/etc/bash_completion.d/subversion
}

