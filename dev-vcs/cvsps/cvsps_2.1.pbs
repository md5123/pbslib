DESCRIPTION="Generating 'patchset' information from a CVS repository"
HOMEPAGE="http://www.cobite.com/cvsps/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://www.cobite.com/"$N"/"$N-$V".tar.gz"

RDEPEND="zlib"
RECOMMENDED=""
BDEPEND=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	config+=""
	doconfig
}

pbs_build() {
	domake prefix=/usr
}

pbs_install() {
	make prefix="$destdir"/usr install
}


