#
# YLmf_OS package build script
#

DESCRIPTION="Generating 'patchset' information from a CVS repository"
HOMEPAGE="http://www.cobite.com/cvsps/"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://www.cobite.com/"$N"/"$N-$V".tar.gz"

RDEPEND="glibc zlib"
RECOMMENDED=""
BDEPEND=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+=""
	ypkg_config
}

pbs_build() {
	ypkg_make prefix=/usr
}

pbs_install() {
	make prefix="$YPPATH_DEST"/usr install
}


