#
# YLmf_OS package build script
#

DESCRIPTION="Uncompress rar files"
HOMEPAGE="http://www.rarlab.com/rar_add.htm"
 
SRC_URI="http://www.rarlab.com/rar/unrarsrc-"$V".tar.gz"

RDEPEND=""
BDEPEND="${RDEPEND}"

pbs_unpack() {
	ypkg_unpack
}

pbs_build() {
	make -f makefile.unix CXXFLAGS="${CPPFLAGS}"
}

pbs_install() {
	mkdir -p "$YPPATH_DEST"/usr/bin
	make -f makefile.unix DESTDIR="$YPPATH_DEST"/usr install
}
