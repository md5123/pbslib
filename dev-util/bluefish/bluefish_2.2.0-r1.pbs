DESCRIPTION="A GTK HTML editor for the experienced web designer or programmer."
HOMEPAGE="http://bluefish.openoffice.nl/"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://www.bennewitz.com/"$N"/stable/source/"$N-$V".tar.gz"

RDEPEND="enchant gucharmap libxml2"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

INSTALL="$N.install"

pbs_unpack() {
        dounpack
}

pbs_config() {
    config+="--with-gtk2"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    rm "$PKGDIR"/{usr/share/mime/mime.cache,usr/share/applications/mimeinfo.cache}
}

