DESCRIPTION="Cross platform Make"
HOMEPAGE="http://www.cmake.org"
 
SRC_URI="http://www.cmake.org/files/v2.8/"$N-$V$R".tar.gz"

RDEPEND="glibc ncurses gcc-lib"
BDEPEND="jdk"

pbs_unpack() {
        dounpack
}

pbs_config() {
	#./bootstrap --prefix=/usr --docdir=/share/doc/"$N-$V$R" --mandir=/share/man
	config+="--prefix=/usr
	             --docdir=/share/doc/"$N-$V$R" 
		     --mandir=/share/man"
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}
