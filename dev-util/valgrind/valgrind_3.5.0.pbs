DESCRIPTION="An open-source memory debugger for GNU/Linux"
HOMEPAGE="http://www.valgrind.org"
LICENSE="GPL-2"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"

SRC_URI="http://www.valgrind.org/downloads/"$N-$V$R".tar.bz2"

RDEPEND=""
BDEPEND=" gdb"
RECOMMENDED=""

NOTES=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	dopatch valgrind-3.4.1-glibc-2.10.1.patch
	dopatch valgrind-3.5.0-glibc-2.11.patch 
	dopatch valgrind-3.5.0-non-exec-stack.patch 
	dopatch valgrind-3.5.0-respect-LDFLAGS.patch 
	dopatch valgrind-3.5.0-local-labels.patch
	autoconf
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
}
