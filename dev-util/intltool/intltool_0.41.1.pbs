DESCRIPTION="Internationalization Tool Collection"
HOMEPAGE=" http://edge.launchpad.net/intltool/ "
 
SRC_URI="http://edge.launchpad.net/intltool/trunk/0.41.1/+download/"$N-$V$R".tar.gz"

RDEPEND="xml-parser"
BDEPEND=""
CONFLICT="intltool-dev"

OPTIONS="nodev"

pbs_unpack() {
        dounpack
}

pbs_config() {
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
	dodoc doc/I18N-HOWTO
}
