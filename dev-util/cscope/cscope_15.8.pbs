DESCRIPTION="Interactively examine a C program"
HOMEPAGE="http://cscope.sourceforge.net/"
LICENSE="BSD"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://downloads.sourceforge.net/"$N"/"$N-$V"a.tar.gz"

RDEPEND="ncurses"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    sed -i 's|/usr/local/lib/cs|/usr/lib/cs|' contrib/ocs
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
    
    install -d "$PKGDIR/usr/lib/cs"
    cd contrib/xcscope
    docp xcscope.el "$PKGDIR"/usr/share/emacs/site-lisp/
    install -m755 cscope-indexer "$PKGDIR"/usr/bin
}

