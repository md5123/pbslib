#
# YLmf_OS package build script
#

DESCRIPTION="A set of programs to assemble and manipulate binary and object files (mingw)"
HOMEPAGE="http://www.mingw.org/"
LICENSE="GPL/LGPL"
PACKAGER="<ylmfos@115.com>"

SRC_URI="http://nchc.dl.sourceforge.net/project/mingw/MinGW/BaseSystem/GNU-Binutils/binutils-2.19.1/binutils-2.19.1-src.tar.gz"

RDEPEND=""
BDEPEND=""
RECOMMENDED=""

NOTES="assembler, linker and library management tools; these
       must be built for the i386-mingw32 target, and should be
       installed prior to building GCC itself."

pbs_unpack() {
	ypkg_unpack
}

pbs_config() {
	target="i586-mingw32"
	YPB_CONFIG+="--target=$target 
	             --enable-shared 
		     --with-gcc 
		     --with-gnu-as 
		     --with-gnu-ld 
		     --disable-nls 
		     --disable-debug"
	ypkg_config
}

pbs_build() {
	ypkg_make CFLAGS=-O2 LDFLAGS=-s
}

pbs_install() {
	ypkg_mkinstall
        # remove some non-cross stuff that will clash with other packages
        #rm -rf "$YPPATH_DEST"/usr/lib
        #rm -rf "$YPPATH_DEST"/usr/share/{info,man}
}	
