
gname="vboxusers"

post_install() {
    dogroupadd -r $gname
    # Add users to vboxusers group
    for user in $(who |awk '{print $1}' |grep -v ^root$ |sort -u |xargs); do
        usermod -aG $gname $user
    done
}       

post_upgrade() {
    post_install
}

post_remove() {
    dogroupdel $gname ||true
}
