DESCRIPTION="Terminal Emulator for X Windows"
HOMEPAGE="http://invisible-island.net/xterm/xterm.html"
LICENSE="custom"
PACKAGER="StartOS Developers"

SRC_URI="ftp://invisible-island.net/"$N"/"$N-$V".tgz"
CHECKSUM="bca2eb95bdd57653f8e3f2f57952c1c5"

RDEPEND="libXaw libXft ncurses"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
    config+=" --with-app-defaults=/usr/share/X11/app-defaults/
              --with-x 
              --enable-ansi-color 
                --enable-88-color 
          --enable-256-color 
          --enable-broken-osc
          --enable-broken-st 
          --enable-load-vt-fonts 
          --enable-i18n 
          --enable-wide-chars 
          --enable-doublechars 
          --enable-warnings 
          --enable-tcap-query 
          --enable-logging 
          --enable-dabbrev 
          --enable-freetype 
          --enable-luit 
          --enable-mini-luit 
          --enable-narrowproto 
          --enable-exec-xterm 
          --with-tty-group=tty 
          --with-utmp-setgid=utmp "
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}


