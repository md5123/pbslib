DESCRIPTION="An IDE for Java and other languages"
HOMEPAGE="http://eclipse.org"
LICENSE="EPL"
PACKAGER="StartOS Developers"

SRC_URI="ftp://ftp.osuosl.org/pub/eclipse/eclipse/downloads/drops4/R-4.2-201206081400/"$N"-SDK-"$V"-linux-gtk.tar.gz"
CHECKSUM="506b9f4e3919ebe3d6a717cd9bef5e07"

RDEPEND="jdk fontconfig libXrender"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""
REPLACE=""

pbs_unpack() {
        dounpack
}

pbs_install() {
    docp * "$PKGDIR"/usr/share/eclipse

    # Install misc
    cd "$PKGDIR"
    docp "$FILESDIR"/eclipse usr/bin/
    dodesktop eclipse.desktop eclipse.svg
    docp "$FILESDIR"/eclipse.svg usr/share/icons/hicolor/scalable/apps/
}

