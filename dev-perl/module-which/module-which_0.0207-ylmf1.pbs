#
# YLmf_OS package build script
#

DESCRIPTION="perl module"
HOMEPAGE="http://search.cpan.org/~ferreira/Module-Which-0.0207/"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/F/FE/FERREIRA/Module-Which-"$V".tar.gz"

RDEPEND=""
BDEPEND="string-truncate"

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

