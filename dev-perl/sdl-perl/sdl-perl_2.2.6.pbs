DESCRIPTION="A Perl wrapper for SDL"
HOMEPAGE="http://search.cpan.org/"
REPO=""
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://cpan.communilink.net/authors/id/K/KT/KTHAKORE/SDL_Perl-v2.2.6.tar.gz"

RDEPEND=""
BDEPEND="yaml-perl"
RECOMMENDED=""
CONFLICT=""

NOTES=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	# install module in vendor directories
	perl Build.PL installdirs=vendor destdir="$destdir" \
	      --config man1ext=1p --config man3ext=3pm 
}	

pbs_build() {
	perl Build
}

pbs_install() {
	perl Build install
	perl_cleanup
}

