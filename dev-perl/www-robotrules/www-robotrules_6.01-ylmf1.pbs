#
# YLmf_OS package build script
#

DESCRIPTION="database of robots.txt-derived permissions  "
HOMEPAGE="http://search.cpan.org/"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"
YVERSION="1"
YARCH="any"

SRC_URI="http://cpan.communilink.net/authors/id/G/GA/GAAS/WWW-RobotRules-"$V".tar.gz"

RDEPEND="perl uri-perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

