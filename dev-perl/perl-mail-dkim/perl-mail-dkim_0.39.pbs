DESCRIPTION="Implements DomainKeys Identified Mail (DKIM)"
HOMEPAGE="http://search.cpan.org/dist/Mail-DKIM"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://www.cpan.org/authors/id/J/JA/JASLONG/Mail-DKIM-$V.tar.gz"
CHECKSUM="0b62c91f855f47e818d96680746572ca"

RDEPEND="perl-crypt-openssl-rsa perl-digest-sha1 perl-mailtools perl-net-dns"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1 PERL5LIB="" \
           PERL_AUTOINSTALL=--skipdeps \
           PERL_MM_OPT="INSTALLDIRS=vendor" \
           PERL_MB_OPT="--installdirs vendor" \
           MODULEBUILDRC=/dev/null
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
