#
# YLmf_OS package build script
#

DESCRIPTION="Determine the locale encoding  "
HOMEPAGE="http://search.cpan.org/~gaas/Encode-Locale-1.02/"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"
YARCH="any"
YVERSION="1"

SRC_URI="http://mirror.osqdu.org/CPAN/authors/id/G/GA/GAAS/Encode-Locale-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor PERL5LIB=""
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

