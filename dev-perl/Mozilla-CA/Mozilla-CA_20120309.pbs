DESCRIPTION="Mozilla's CA cert bundle in PEM format"
HOMEPAGE="http://search.cpan.org/$N"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL2,LGPL2.1"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/A/AB/ABH/"$N-$V".tar.gz"
CHECKSUM="f7fba6902335c5e068e3a576e4dce9ef"

RDEPEND="perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
    unset PERL5LIB PERL_MM_OPT
    doconfig 
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall INSTALLDIRS=vendor
    perl_cleanup
}

