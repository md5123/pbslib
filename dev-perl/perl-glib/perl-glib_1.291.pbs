DESCRIPTION="Perl wrappers for the GLib utility and Object libraries"
HOMEPAGE="http://search.cpan.org/~tsch/Glib"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://search.cpan.org/CPAN/authors/id/X/XA/XAOC/Glib-"$V"_002.tar.gz"

RDEPEND="perl glib2"
BDEPEND="perl-extutils-depends perl-extutils-pkgconfig"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    doconfig INSTALLDIRS=vendor
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
