#
# Ylmf OS package build script
#

DESCRIPTION="wav2mp3 wav2ogg utils"
HOMEPAGE="http://wav2mp3.sourceforge.net/"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"
LICENSE="GPL PerlArtistic"
YARCH="any"

SRC_URI="http://downloads.sourceforge.net/project/wav2mp3/wav2mp3_wav2ogg/"$V"/WAV2-"$V".tar.gz"

RDEPEND="file-which vorbis-tools"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

