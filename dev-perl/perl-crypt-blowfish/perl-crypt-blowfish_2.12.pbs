DESCRIPTION="Perl Blowfish encryption module"
HOMEPAGE="http://search.cpan.org/~dparis/Crypt-Blowfish"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
GROUP="perl"

SRC_URI="http://search.cpan.org/CPAN/authors/id/D/DP/DPARIS/Crypt-Blowfish-$V.tar.gz"

RDEPEND="glibc perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1
    doconfig INSTALLDIRS=vendor 
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
