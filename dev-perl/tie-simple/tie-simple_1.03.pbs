DESCRIPTION="Variable ties made easier: much, much, much easier... "
HOMEPAGE="http://search.cpan.org/~hanenkamp/Tie-Simple-1.03/"
LICENSE="GPL,PerlArtistic"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://cpan.wenzk.com/authors/id/H/HA/HANENKAMP/Tie-Simple-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

