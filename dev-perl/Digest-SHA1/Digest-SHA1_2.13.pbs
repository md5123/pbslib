DESCRIPTION="Perl interface to the SHA-1 Algorithm"
HOMEPAGE="http://search.cpan.org/dist/Digest-SHA1"
LICENSE="GPL,PerlArtistic"
PACKAGER="StartOS Developers"

SRC_URI="http://www.cpan.org/authors/id/G/GA/GAAS/"$N-$V".tar.gz"

RDEPEND="perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

