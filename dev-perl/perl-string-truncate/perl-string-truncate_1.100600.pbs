DESCRIPTION="A module for when strings are too long to be displayed in..."
HOMEPAGE="http://search.cpan.org/~rjbs/String-Truncate-1.100570/"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/String-Truncate-"$V".tar.gz"

RDEPEND=""
BDEPEND="perl-sub-exporter"

pbs_unpack() {
