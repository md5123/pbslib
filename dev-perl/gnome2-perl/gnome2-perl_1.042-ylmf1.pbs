#
# YLmf_OS package build script
#

DESCRIPTION="Perl bindings to the 2.x series of the GNOME libraries"
HOMEPAGE="http://search.cpan.org/~tsch/Gnome2-1.042/Gnome2.pm"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"

SRC_URI="http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-"$V".tar.gz"

RDEPEND="gtk+ pango-perl"
BDEPEND="extutils-depends extutils-pkgconfig glib-perl gtk2-perl pango-perl cairo-perl gnome2-canvas-perl gnome2-vfs-perl"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

