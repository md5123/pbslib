DESCRIPTION="HTTP Status code processing "
HOMEPAGE="http://search.cpan.org/~gaas/HTTP-Message-6.02/lib/HTTP/Status.pm"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"
LICENSE="GPL PerlArtistic"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/HTTP-Message-"$V".tar.gz"

RDEPEND="perl encode-locale html-parser-perl http-date-perl lwp-mediatypes uri-perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

