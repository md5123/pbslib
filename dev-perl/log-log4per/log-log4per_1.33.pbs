DESCRIPTION="Log4j implementation for Perl"
HOMEPAGE="http://search.cpan.org/~mschilli/Log-Log4perl-1.33/"
LICENSE="GPL PerlArtistic"
PACKAGER="StartOS Developers"
YARCH="any"

SRC_URI="http://cpan.communilink.net/authors/id/M/MS/MSCHILLI/Log-Log4perl-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

