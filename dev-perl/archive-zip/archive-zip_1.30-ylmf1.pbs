#
# Ylmf OS package build script
#

DESCRIPTION="perl module interface to ZIP archive files"
HOMEPAGE="http://search.cpan.org/~adamk/Archive-Zip/"
LICENSE="GPL PerlArtistic"
PACKAGER="Ylmf OS Developers <ylmfos@ylmf.com>"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Archive-Zip-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

