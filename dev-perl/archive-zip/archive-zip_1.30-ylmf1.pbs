#
# YLmf_OS package build script
#

DESCRIPTION="perl module interface to ZIP archive files"
HOMEPAGE="http://search.cpan.org/~adamk/Archive-Zip/"
LICENSE="GPL PerlArtistic"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
YARCH="any"
YVERSION="1"

SRC_URI="http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Archive-Zip-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

