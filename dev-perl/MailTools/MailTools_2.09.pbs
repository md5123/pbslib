DESCRIPTION="Various e-mail related modules"
HOMEPAGE="https://metacpan.org/release/$N"
LICENSE="GPL,PerlArtistic"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/M/MA/MARKOV/"$N-$V".tar.gz"
CHECKSUM="2ab874c4202d647e0fc58dd7cffb59f6"

RDEPEND="TimeDate"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
    unset PERL5LIB PERL_MM_OPT
    doconfig 
}

pbs_build() {
    domake 
}

pbs_install() {
    domkinstall INSTALLDIRS=vendor
    perl_cleanup
}

