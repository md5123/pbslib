DESCRIPTION="Provide https support for LWP::UserAgent  "
HOMEPAGE="http://search.cpan.org/~gaas/$N"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/"$N-$V".tar.gz"
CHECKSUM="2a9341732172da290fe1b5af98a015a7"

RDEPEND="IO-Socket-SSL libwww-perl Mozilla-CA Net-HTTP"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1 PERL5LIB="" \
           PERL_AUTOINSTALL=--skipdeps \
           PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$destdir'" \
           PERL_MB_OPT="--installdirs vendor --destdir '$desetdir'" \
           MODULEBUILDRC=/dev/null
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}

