DESCRIPTION="Provide https support for LWP::UserAgent  "
HOMEPAGE="http://search.cpan.org/~gaas/LWP-Protocol-https-6.02/"
PACKAGER="StartOS Developers"
LICENSE="GPL PerlArtistic"
YARCH="any"

SRC_URI="http://mirrors.xmu.edu.cn/CPAN/authors/id/G/GA/GAAS/LWP-Protocol-https-"$V".tar.gz"

RDEPEND="perl io-socket-ssl libwww-perl mozilla-ca net-http"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

