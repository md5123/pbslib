DESCRIPTION="Capture STDOUT and STDERR from Perl, XS or external programs"
HOMEPAGE="http://search.cpan.org/~dagolden/Capture-Tiny"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://mirrors.xmu.edu.cn/CPAN/authors/id/D/DA/DAGOLDEN/Capture-Tiny-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1
    doconfig INSTALLDIRS=vendor
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
