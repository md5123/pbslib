DESCRIPTION="Sophisticated exporter for custom-built routines"
HOMEPAGE="http://search.cpan.org/~rjbs/Sub-Exporter"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Sub-Exporter-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1
    doconfig INSTALLDIRS=vendor
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
