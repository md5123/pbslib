#
# YLmf_OS package build script
#

DESCRIPTION="HTML Formatter"
HOMEPAGE="http://search.cpan.org/~nigelm/HTML-Format-2.05/"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"

SRC_URI="http://search.cpan.org/CPAN/authors/id/N/NI/NIGELM/HTML-Format-"$V".tar.gz"

RDEPEND="perl "
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

