DESCRIPTION="HTML Formatter"
HOMEPAGE="http://search.cpan.org/~nigelm/HTML-Format-2.05/"
PACKAGER="StartOS Developers"
LICENSE="GPL PerlArtistic"

SRC_URI="http://search.cpan.org/CPAN/authors/id/N/NI/NIGELM/HTML-Format-"$V".tar.gz"

RDEPEND="perl "
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

