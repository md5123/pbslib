#
# Ylmf OS package build script
#

DESCRIPTION="Allows a perl developer to use the GnomeCanvas widget with Gtk2-Perl. "
HOMEPAGE="http://search.cpan.org/~tsch/Glib-1.223/Glib.pm"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"

SRC_URI="http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gnome2-Canvas-"$V".tar.gz"

RDEPEND="perl libgnomecanvas gtk2-perl"
BDEPEND="extutils-depends extutils-pkgconfig"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

