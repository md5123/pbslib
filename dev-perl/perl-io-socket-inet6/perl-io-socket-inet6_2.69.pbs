DESCRIPTION="Object interface for AF_INET|AF_INET6 domain sockets"
HOMEPAGE="http://search.cpan.org/dist/IO-Socket-INET6"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
GROUP="perl"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/IO-Socket-INET6-$V.tar.gz"
CHECKSUM="12a80a5164a775294a9bf9c812fc3257"

RDEPEND="perl-socket6"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1 PERL5LIB="" \
           PERL_AUTOINSTALL=--skipdeps \
           PERL_MM_OPT="INSTALLDIRS=vendor" \
           PERL_MB_OPT="--installdirs vendor" \
           MODULEBUILDRC=/dev/null
    perl Makefile.PL
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
