DESCRIPTION="Perl module Provide a simple wrapper around Getopt::Long"
HOMEPAGE="http://search.cpan.org/~rsavage/Getopt-Simple-1.52/"
LICENSE="GPL,PerlArtistic"
YARCH="any"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://search.cpan.org/CPAN/authors/id/R/RS/RSAVAGE/Getopt-Simple-"$V".tgz"

RDEPEND="perl"
BDEPEND=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	doconfig INSTALLDIRS=vendor
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall
        perl_cleanup
}

