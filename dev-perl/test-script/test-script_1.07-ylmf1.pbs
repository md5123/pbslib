#
# YLmf_OS package build script
#

DESCRIPTION="Perl module Test-Script"
HOMEPAGE="http://search.cpan.org/~adamk/Test-Script-1.07/"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"
YVERSION="1"
YARCH="any"

SRC_URI="http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Test-Script-"$V".tar.gz"

RDEPEND="perl"
BDEPEND="ipc-run3 probe-perl"

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

