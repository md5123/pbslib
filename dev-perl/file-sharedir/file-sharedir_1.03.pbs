#
# YLmf_OS package build script
#

DESCRIPTION="Locate per-dist and per-module shared files  "
HOMEPAGE="http://search.cpan.org/~adamk/File-ShareDir-1.03/"
LICENSE="GPL PerlArtistic"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
YARCH="any"
YVERSION="0"

SRC_URI="http://mirrors.sohu.com/CPAN/authors/id/A/AD/ADAMK/File-ShareDir-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=" "
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

