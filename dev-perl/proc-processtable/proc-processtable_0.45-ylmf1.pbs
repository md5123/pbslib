#
# YLmf_OS package build script
#

DESCRIPTION="kill a list of pids, and all their sub-children "
HOMEPAGE="http://search.cpan.org/~durist/Proc-ProcessTable-0.45/Killfam.pm"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"
LICENSE="GPL PerlArtistic"
YVERSION="1"

SRC_URI="http://search.cpan.org/CPAN/authors/id/D/DU/DURIST/Proc-ProcessTable-"$V".tar.gz"

RDEPEND="perl"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	export PERL_MM_USE_DEFAULT=1
	ypkg_config INSTALLDIRS=vendor
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
        perl_cleanup
}

