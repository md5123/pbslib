DESCRIPTION="Perl interface to the sexy widget collection"
HOMEPAGE="http://search.cpan.org/~flora/Gtk2-Sexy"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
LICENSE="GPL,PerlArtistic"
GROUP="perl"

SRC_URI="http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Gtk2-Sexy-$V.tar.gz"

RDEPEND="libsexy gdk-pixbuf2"
BDEPEND="perl-extutils-depends perl-extutils-pkgconfig perl-gtk2"
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    export PERL_MM_USE_DEFAULT=1
    doconfig INSTALLDIRS=vendor
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    perl_cleanup
}
