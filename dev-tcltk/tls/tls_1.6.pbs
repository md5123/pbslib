#
# YLmf_OS package build script
#

DESCRIPTION="OpenSSL extension to Tcl"
HOMEPAGE="http://tls.sourceforge.net/"
REPO=""
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://downloads.sourceforge.net/tls/tls"$V$R"-src.tar.gz"

RDEPEND="glibc openssl zlib"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
        ypkg_unpack
}

pbs_config() {
	YPB_CONFIG+=""
	ypkg_config
}

pbs_build() {
	ypkg_make
}

pbs_install() {
	ypkg_mkinstall
	ypkg_doln /usr/lib/tls1.6/libtls1.6.so "$YPPATH_DEST"/usr/lib/libtls1.6.so
}

