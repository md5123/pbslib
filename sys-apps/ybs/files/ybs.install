
post_install() {
	if [ ! -f /etc/ybs.conf  ];then
		cat >/etc/ybs.conf <<"EOF"
CC=gcc
CXX=g++
MAKEOPTS="-j6"
#YPINST_PREFIX="--prefix=/usr"
YPINST_PREFIX=
ACCEPT_REPO="stable"
#YP_I18N="en zh_CN"
YPPATH_DIST_URI="http://pkg.ylmf.com/sources"
AUTO_INSTALL="yes"
YPPATH_PACKAGE="/var/ypkg/packages"
EOF
	fi
	return 0
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_upgrade
}

post_remove() {
	rm -r /etc/ybs.conf ||true
}

