DESCRIPTION="laptop detect tool"
HOMEPAGE="www.startos.org"
LICENSE="GPL"
PACKAGER="StartOS Developers"
YARCH="any"

SRC_URI="http://ftp.debian.org/debian/pool/main/l/"$N"/"${N}_$V".tar.gz"

RDEPEND=""
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
        dounpack
}

pbs_build() {
	sed -e "s/@VERSION@/${V}$R/g" < laptop-detect.in > laptop-detect
	chmod 755 laptop-detect
}

pbs_install() {
	docp laptop-detect "$destdir"/usr/sbin
	dodoc README
	doman laptop-detect.8
}


