. /usr/lib/ybs/funcs

post_install() {
	# automatic build modules
	ypkg_domk autoinstall

	#
	update-initramfs -c -k "$2"-ylmfos
	update-grub
}       

post_remove() {
	[ -f /boot/initrd.img-"$2"-ylmfos ]         && rm /boot/initrd.img-"$2"-ylmfos
	[ -f /var/lib/initramfs-tools/"$2"-ylmfos ] && rm /var/lib/initramfs-tools/"$2"-ylmfos
	update-grub
}

