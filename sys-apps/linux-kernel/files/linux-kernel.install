. /usr/lib/ybs/funcs

post_install() {
	# For initramfs
	name="$1"
	version="$2"
	depmod -a "$version"-ylmfos
	update-initramfs -c -k "$version"-ylmfos

	# For grub
	update-grub
}       

post_remove() {
	name="$1"
	version="$2"
	rm /boot/initrd.img-"$version"-ylmfos         2>/dev/null
	rm /var/lib/initramfs-tools/"$version"-ylmfos 2>/dev/null

	# For grub
	update-grub
}

post_upgrade() {
	post_install $1 $2
}

post_downgrade() {
	post_install $1 $2
}

