. /usr/lib/ybs/funcs

post_install() {
	ypkg_groupadd -r "haldaemon"
	ypkg_useradd -c "HAL Daemon User" -d "/dev/null" -s "/bin/false" -r -N "haldaemon"
	
	#
	systemctl enable hald.service
	start hald || return 0
}

pre_remove() {
	systemctl disable hald.service
}

post_remove() {
	ypkg_userdel  "haldaemon"
	ypkg_groupdel "haldaemon"
	return 0
}

post_upgrade() {
	systemctl --system daemon-reload
	restart hald || return 0
}

post_downgrade() {
	post_upgrade
}

