. /usr/lib/ybs/funcs

execfile="/usr/libexec/dbus-daemon-launch-helper"

post_install() {
	dogroupadd -g 81 dbus
	douseradd -c 'System message bus' -u 81 -g dbus -d '/' -s /bin/false dbus
	passwd -l dbus &>/dev/null
	dbus-uuidgen --ensure
	chown root:dbus $execfile
	chmod 4755 $execfile ||true
}       

post_remove() {
	douserdel "dbus"
	dogroupdel "dbus" ||true
}

post_upgrade() {
	post_install
}

