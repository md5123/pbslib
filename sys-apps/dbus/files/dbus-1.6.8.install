. /usr/lib/ybs/funcs

file="/usr/lib64/dbus-daemon-launch-helper"

post_install() {
	getent group dbus >/dev/null || groupadd -g 81 dbus
	getent passwd dbus >/dev/null || useradd -c 'System message bus' -u 81 -g dbus -d '/' -s /bin/false dbus
	passwd -l dbus &>/dev/null
	dbus-uuidgen --ensure
	chown root:messagebus $file
	chmod 4755 $file ||true
}       

post_remove() {
	douserdel "dbus"
	dogroupdel "dbus" ||true
}

post_upgrade() {
	post_install
}

post_downgrade() {	
	post_install
}

