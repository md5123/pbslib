. /usr/lib/ybs/funcs

db_file="/var/ypkg/db/package.db"
sql_file="/usr/share/ypkg/db_create.sql"

post_install() {
	if [ ! -f $db_dir ] && [ -f $sql_file ]; then
		sqlite3 $db_dir ".read $sql_file"	
	fi
	[ -f $db_dir ] && ypkg2-import
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

