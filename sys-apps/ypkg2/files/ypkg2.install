. /usr/lib/ybs/funcs

dbfile="/var/ypkg/db/package.db"
sqlfile="/usr/share/ypkg/db_create.sql"

post_install() {
	if [ ! -f $dbfile ] && [ -f $sqlfile ]; then
		sqlite3 $dbfile ".read $sqlfile"	
		[ -f $dbfile ] && ypkg2-import
	fi
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}

