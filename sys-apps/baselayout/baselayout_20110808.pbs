#
# YLmf_OS package build script
#

DESCRIPTION="Base layout for Ylmf_OS Linux"
HOMEPAGE="http://ylmf.net"
LICENSE="GPL"
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI=""

RDEPEND="bash coreutils procps grep findutils"
BDEPEND=""

INSTALL="$N.install"

pbs_install() {
	ypkg_docp "$FILES_PATH"/files/ylmfos-release  "$YPPATH_DEST"/etc
	ypkg_docp "$FILES_PATH"/files/lsb_release  "$YPPATH_DEST"/usr/bin/
	chmod +x  "$YPPATH_DEST"/usr/bin/lsb_release
}

