. /usr/lib/ybs/funcs

gname="polkitd"

post_install() {
	dogroupadd -g 102 $gname
	douseradd -c 'Policy Kit Daemon' -u 102 -g $gname -d '/var/lib/polkit-1' -s /bin/false $gname
    chown -R $gname:root   /{etc,usr/share}/polkit-1/rules.d
    chown -R $gname:$gname /var/lib/polkit-1
	passwd -l $gname &>/dev/null ||true
}

post_remove() {
	douserdel $gname
	dogroupdel $gname ||true
}

post_upgrade() {
	post_install
}

