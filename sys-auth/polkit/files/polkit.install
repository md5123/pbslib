. /usr/lib/ybs/funcs

post_install() {
	dogroupadd -r "polkituser"
	douseradd -c "Policy Kit Daemon User" -d "/dev/null" -s "/bin/false" -r "polkituser" ||true
}

post_remove() {
	douserdel "polkituser"
	dogroupdel "polkituser" ||true
}

post_upgrade() {
	post_install
}

post_downgrade() {
	post_install
}
