#
# YLmf_OS package build script
#

DESCRIPTION="Networking support library for the Lua language."
HOMEPAGE="http://www.tecgraf.puc-rio.br/~diego/professional/luasocket/"
REPO=""
LICENSE="GPL"
PRIORITY=""
PACKAGER="Ylmf OS Developers <ylmfos@115.com>"

SRC_URI="http://luaforge.net/frs/download.php/2664/"$N-$V$R".tar.gz"

RDEPEND=""
BDEPEND=" lua"
RECOMMENDED=""
CONFLICT=""

NOTES=""

pbs_unpack() {
        dounpack
}

pbs_config() {
	dopatch luasocket-2.0.2-unixsocket.patch
	config+=""
	doconfig
}

pbs_build() {
	domake
}

pbs_install() {
	domkinstall INSTALL_TOP_SHARE="$destdir"/usr/share/lua/5.1 INSTALL_TOP_LIB="$destdir"/usr/lib/lua/5.1
}
